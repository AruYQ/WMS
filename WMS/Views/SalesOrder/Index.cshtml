@{
    ViewData["Title"] = "Sales Orders";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h1 class="page-title">
                <i class="fas fa-shopping-bag me-2"></i>
                Sales Orders
            </h1>
            <p class="page-subtitle">Manage outbound orders from warehouse to customers</p>
        </div>
        <div class="col-auto">
            <button type="button" class="btn btn-primary" id="createSOBtn">
                <i class="fas fa-plus"></i>
                Create New Sales Order
            </button>
        </div>
    </div>
</div>

<!-- Dashboard Statistics -->
<div class="row mb-4">
    <div class="col-md-2">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title mb-0" id="totalSOs">0</h4>
                        <p class="card-text">Total SOs</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-shopping-bag fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title mb-0" id="pendingSOs">0</h4>
                        <p class="card-text">Pending</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title mb-0" id="inProgressSOs">0</h4>
                        <p class="card-text">In Progress</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-spinner fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title mb-0" id="pickedSOs">0</h4>
                        <p class="card-text">Picked</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-secondary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title mb-0" id="shippedSOs">0</h4>
                        <p class="card-text">Shipped</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-truck fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body py-3">
                <div class="row align-items-center">
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                            <input type="text" class="form-control" id="searchInput" placeholder="Search SO numbers, customers...">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" id="statusFilter">
                            <option value="">All Statuses</option>
                            <option value="Pending">Pending</option>
                            <option value="In Progress">In Progress</option>
                            <option value="Picked">Picked</option>
                            <option value="Shipped">Shipped</option>
                            <option value="Cancelled">Cancelled</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select class="form-select" id="pageSizeSelect">
                            <option value="10">10 per page</option>
                            <option value="25">25 per page</option>
                            <option value="50">50 per page</option>
                            <option value="100">100 per page</option>
                        </select>
                    </div>
                    <div class="col-md-3 text-end">
                        <button type="button" class="btn btn-outline-secondary" onclick="salesOrderManager.loadSalesOrders()">
                            <i class="fas fa-sync-alt me-1"></i>Refresh
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sales Orders Table -->
<div class="card">
    <div class="card-body">
        <div id="salesOrdersTableContainer">
            <!-- Table will be rendered here by JavaScript -->
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2 text-muted">Loading Sales Orders...</p>
            </div>
        </div>

        <!-- Pagination -->
        <div class="row align-items-center mt-3">
            <div class="col-md-6">
                <p class="mb-0 text-muted">
                    Showing <span id="showingStart">0</span> to <span id="showingEnd">0</span> of <span id="totalRecords">0</span> entries
                </p>
            </div>
            <div class="col-md-6">
                <nav aria-label="Sales Order pagination">
                    <div class="d-flex justify-content-end align-items-center">
                        <span class="me-3 text-muted">
                            Page <span id="currentPageNum">1</span> of <span id="totalPagesNum">1</span>
                        </span>
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-primary btn-sm" id="prevPageBtn" onclick="salesOrderManager.previousPage()">
                                <i class="fas fa-chevron-left"></i> Previous
                            </button>
                            <button type="button" class="btn btn-outline-primary btn-sm" id="nextPageBtn" onclick="salesOrderManager.nextPage()">
                                Next <i class="fas fa-chevron-right"></i>
                            </button>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Create/Edit Sales Order Modal -->
<div class="modal fade" id="soModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="soModalTitle">Create New Sales Order</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            
            <!-- Error Message -->
            <div id="errorMessage" class="alert alert-danger d-none mx-3 mt-3" role="alert">
                <!-- Error messages will be shown here -->
            </div>
            
            <!-- Success Message -->
            <div id="successMessage" class="alert alert-success d-none mx-3 mt-3" role="alert">
                <!-- Success messages will be shown here -->
            </div>
            
            <form id="soForm">
                <div class="modal-body">
                    <div class="row">
                        <!-- Sales Order Information -->
                        <div class="col-lg-8">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-info-circle me-2"></i>
                                        Sales Order Information
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="customerId" class="form-label">Customer <span class="text-danger">*</span></label>
                                                <div class="input-group">
                                                    <select class="form-select" id="customerId" name="customerId" required>
                                                        <option value="">-- Select Customer --</option>
                                                        <!-- Options will be populated by JavaScript -->
                                                    </select>
                                                    <button class="btn btn-outline-secondary" type="button" id="customerAdvancedSearchBtn" title="Advanced Search">
                                                        <i class="fas fa-search"></i>
                                                    </button>
                                                </div>
                                                <div class="invalid-feedback"></div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="orderDate" class="form-label">Order Date <span class="text-danger">*</span></label>
                                                <input type="datetime-local" class="form-control" id="orderDate" name="orderDate" required>
                                                <small class="form-text text-muted">Default: Today with current time</small>
                                                <div class="invalid-feedback"></div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="expectedArrivalDate" class="form-label">Expected Arrival Date</label>
                                                <input type="date" class="form-control" id="expectedArrivalDate" name="expectedArrivalDate">
                                                <div class="invalid-feedback"></div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="notes" class="form-label">Notes</label>
                                        <textarea class="form-control" id="notes" name="notes" rows="3" placeholder="Additional notes or instructions..."></textarea>
                                        <div class="invalid-feedback"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Summary -->
                        <div class="col-lg-4">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-calculator me-2"></i>
                                        Summary
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label class="form-label">Total Amount</label>
                                        <div class="h4 text-primary" id="soTotalAmount">Rp 0</div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Items Count</label>
                                        <div class="h5" id="soItemsCount">0 items</div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Holding Location Section -->
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-warehouse me-2"></i>
                                        Holding Location
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label for="holdingLocationId" class="form-label">Holding Location <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <select class="form-select" id="holdingLocationId" name="holdingLocationId" required>
                                                <option value="">-- Select Holding Location --</option>
                                                <!-- Options will be populated by JavaScript -->
                                            </select>
                                            <button class="btn btn-outline-secondary" type="button" id="locationAdvancedSearchBtn" title="Advanced Search">
                                                <i class="fas fa-search"></i>
                                            </button>
                                        </div>
                                        <div class="form-text">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Items will be stored here after picking
                                        </div>
                                        <div class="invalid-feedback"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Items Section -->
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-boxes me-2"></i>
                                Items
                            </h5>
                            <button type="button" class="btn btn-sm btn-outline-primary" id="addSOItemBtn">
                                <i class="fas fa-plus"></i>
                                Add Item
                            </button>
                        </div>
                        <div class="card-body">
                            <div class="row mb-2">
                                <div class="col-md-3">
                                    <label class="form-label fw-medium">Item</label>
                                </div>
                                <div class="col-md-1">
                                    <label class="form-label fw-medium">Stock</label>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label fw-medium">Quantity</label>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label fw-medium">Unit Price</label>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label fw-medium">Total Price</label>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label fw-medium">Action</label>
                                </div>
                            </div>
                            <div id="soItemsContainer">
                                <!-- Items will be added here dynamically -->
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="saveSOBtn">
                        <i class="fas fa-save me-2"></i>
                        <span class="btn-text">Save Sales Order</span>
                        <div class="spinner-border spinner-border-sm d-none" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Sales Order Modal -->
<div class="modal fade" id="editSOModal" tabindex="-1" aria-labelledby="editSOModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editSOModalLabel">
                    <i class="fas fa-edit me-2"></i>
                    Edit Sales Order
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="editSOErrorMessage" class="alert alert-danger d-none mx-3 mt-3"></div>
            <div id="editSOSuccessMessage" class="alert alert-success d-none mx-3 mt-3"></div>
            <form id="editSOForm">
                <div class="modal-body">
                    <div class="row">
                        <!-- Sales Order Information -->
                        <div class="col-lg-8">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-info-circle me-2"></i>
                                        Sales Order Information
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="editCustomerId" class="form-label">Customer</label>
                                                <input type="text" class="form-control" id="editCustomerIdDisplay" readonly style="background-color: #f8f9fa;">
