                    Create Picking
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Item Advanced Search Modal -->
<div class="modal fade" id="soItemAdvancedSearchModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Advanced Item Search</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="soItemAdvancedSearchForm">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="soSearchItemCode" class="form-label">Item Code</label>
                                <input type="text" class="form-control" id="soSearchItemCode" placeholder="Enter item code">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="soSearchItemName" class="form-label">Item Name</label>
                                <input type="text" class="form-control" id="soSearchItemName" placeholder="Enter item name">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="soSearchItemUnit" class="form-label">Unit</label>
                                <input type="text" class="form-control" id="soSearchItemUnit" placeholder="Enter unit">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="soSearchItemCreatedDateFrom" class="form-label">Created Date From</label>
                                <input type="date" class="form-control" id="soSearchItemCreatedDateFrom">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="soSearchItemCreatedDateTo" class="form-label">Created Date To</label>
                                <input type="date" class="form-control" id="soSearchItemCreatedDateTo">
                            </div>
                        </div>
                        <div class="col-md-6">
