<div class="modal fade" id="cancelSOModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Cancel Sales Order
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <p>Are you sure you want to cancel Sales Order <strong id="cancelSONumber"></strong>?</p>
                    <div class="alert alert-warning" id="cancelSOWarning">
                        <i class="fas fa-info-circle me-2"></i>
                        This action cannot be undone. The sales order will be marked as cancelled.
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="cancelSOReason" class="form-label">
                        Reason <span class="text-danger">*</span>
                    </label>
                    <textarea class="form-control" id="cancelSOReason" name="Reason" rows="4" 
                              placeholder="Enter cancellation reason..." required maxlength="500"></textarea>
                    <div class="form-text text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Reason will Replace Notes of the Sales Order with format: "Cancelation reason : [Reason]"
                    </div>
                    <small class="text-muted float-end">
                        <span id="cancelSOReasonCount">0</span>/500 characters
                    </small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>
                    Close
                </button>
                <button type="button" class="btn btn-danger" id="confirmCancelSOBtn">
                    <i class="fas fa-ban me-1"></i>
                    Cancel Sales Order
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/sales-order-manager.js"></script>
    <script src="~/js/sales-order-customer-manager.js"></script>
    <script src="~/js/sales-order-location-manager.js"></script>
    <script src="~/js/sales-order-item-manager.js"></script>
    
    <script>
        // Cancel Sales Order functionality
        let currentSOId = null;

        // Function to show cancel modal
        function showCancelSOModal(soId, soNumber, hasPicking = false) {
            currentSOId = soId;
            document.getElementById('cancelSONumber').textContent = soNumber;
            document.getElementById('cancelSOReason').value = '';
            document.getElementById('cancelSOReasonCount').textContent = '0';
            
            // Update warning message if picking exists
            const warningDiv = document.getElementById('cancelSOWarning');
            if (hasPicking) {
                warningDiv.innerHTML = '<i class="fas fa-info-circle me-2"></i>This action cannot be undone. The sales order and associated picking will be marked as cancelled.';
            } else {
                warningDiv.innerHTML = '<i class="fas fa-info-circle me-2"></i>This action cannot be undone. The sales order will be marked as cancelled.';
            }
            
            // Character counter
            const reasonTextarea = document.getElementById('cancelSOReason');
            const updateCounter = function() {
                const count = reasonTextarea.value.length;
                document.getElementById('cancelSOReasonCount').textContent = count;
                if (count > 450) {
                    document.getElementById('cancelSOReasonCount').classList.add('text-warning');
                } else {
                    document.getElementById('cancelSOReasonCount').classList.remove('text-warning');
                }
            };

            // Remove existing listeners and add new one
            reasonTextarea.removeEventListener('input', updateCounter);
            reasonTextarea.addEventListener('input', updateCounter);
            
            const modal = new bootstrap.Modal(document.getElementById('cancelSOModal'));
            modal.show();
        }

        // Handle cancel confirmation
        document.getElementById('confirmCancelSOBtn').addEventListener('click', async function() {
            const reason = document.getElementById('cancelSOReason').value.trim();
            
            if (!reason) {
                alert('Reason is required');
                return;
            }
            
            if (reason.length > 500) {
                alert('Reason cannot exceed 500 characters');
                return;
            }
            
            this.disabled = true;
            const originalText = this.innerHTML;
            this.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Processing...';
            
            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';
                const response = await fetch(`/api/salesorder/${currentSOId}/cancel`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({ Reason: reason })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('Sales Order cancelled successfully' + (result.data.pickingCancelled ? ' (Picking also cancelled)' : ''));
                    // Close modal
                    bootstrap.Modal.getInstance(document.getElementById('cancelSOModal')).hide();
                    // Reload sales orders
                    if (window.salesOrderManager) {
                        window.salesOrderManager.loadSalesOrders();
                    } else {
                        location.reload();
                    }
                } else {
                    alert(result.message || 'Error cancelling Sales Order');
                    this.disabled = false;
                    this.innerHTML = originalText;
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error cancelling Sales Order');
                this.disabled = false;
                this.innerHTML = originalText;
            }
        });

        // Make function globally available
        window.showCancelSOModal = showCancelSOModal;
    </script>
}

