                                        <div class="invalid-feedback"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Summary -->
                        <div class="col-lg-4">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-calculator me-2"></i>
                                        Summary
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label class="form-label">Total Amount</label>
                                        <div class="h4 text-primary" id="editSOTotalAmount">Rp 0</div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Items Count</label>
                                        <div class="h5" id="editSOItemsCount">0 items</div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Holding Location Section -->
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-warehouse me-2"></i>
                                        Holding Location
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label for="editHoldingLocationId" class="form-label">Holding Location <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <select class="form-select" id="editHoldingLocationId" name="holdingLocationId" required>
                                                <option value="">-- Select Holding Location --</option>
                                                <!-- Options will be populated by JavaScript -->
                                            </select>
                                            <button class="btn btn-outline-secondary" type="button" id="editLocationAdvancedSearchBtn" title="Advanced Search">
                                                <i class="fas fa-search"></i>
                                            </button>
                                        </div>
                                        <div class="form-text">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Items will be stored here after picking
                                        </div>
                                        <div class="invalid-feedback"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Items Section -->
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-boxes me-2"></i>
                                Items
                            </h5>
                            <button type="button" class="btn btn-sm btn-outline-primary" id="editAddSOItemBtn">
                                <i class="fas fa-plus"></i>
                                Add Item
                            </button>
                        </div>
                        <div class="card-body">
                            <div class="row mb-2">
                                <div class="col-md-3">
                                    <label class="form-label fw-medium">Item</label>
                                </div>
                                <div class="col-md-1">
                                    <label class="form-label fw-medium">Stock</label>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label fw-medium">Quantity</label>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label fw-medium">Unit Price</label>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label fw-medium">Total Price</label>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label fw-medium">Action</label>
                                </div>
                            </div>
                            <div id="editSOItemsContainer">
                                <!-- Items will be added here dynamically -->
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="updateSOBtn">
                        <i class="fas fa-save me-2"></i>
                        <span class="btn-text">Update Sales Order</span>
