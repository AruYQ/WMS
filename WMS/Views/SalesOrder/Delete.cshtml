@model WMS.Models.ViewModels.SalesOrderViewModel

@{
    ViewData["Title"] = "Delete Sales Order";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="page-title text-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Delete Sales Order
            </h1>
            <p class="page-subtitle">Confirm deletion of this sales order</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-trash me-2"></i>
                        Confirm Deletion
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning!</strong> This action cannot be undone. The sales order and all its data will be permanently deleted.
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">SO Number:</label>
                                <div class="fw-bold">@Model.SONumber</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Status:</label>
                                <div>
                                    <span class="badge @(Model.Status switch {
                                        "Draft" => "bg-warning",
                                        "Confirmed" => "bg-info", 
                                        "Shipped" => "bg-primary",
                                        "Completed" => "bg-success",
                                        "Cancelled" => "bg-danger",
                                        _ => "bg-secondary"
                                    })">
                                        @Model.Status
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Customer:</label>
                                <div class="fw-medium">@Model.CustomerName</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Order Date:</label>
                                <div class="fw-medium">@Model.OrderDate.ToString("MMM dd, yyyy")</div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Total Amount:</label>
                                <div class="fw-bold text-success fs-5">@Model.TotalAmount.ToString("C0")</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Items:</label>
                                <div class="fw-medium">@Model.Details.Count items (@Model.Details.Sum(d => d.Quantity) units)</div>
                            </div>
                        </div>
                    </div>

                    @if (Model.Details.Any())
                    {
                        <div class="mt-4">
                            <h6 class="text-muted mb-3">Items to be deleted:</h6>
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Item</th>
                                            <th class="text-end">Qty</th>
                                            <th class="text-end">Unit Price</th>
                                            <th class="text-end">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detail in Model.Details)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="fw-medium">@detail.ItemCode</div>
                                                    <div class="small text-muted">@detail.ItemName</div>
                                                </td>
                                                <td class="text-end">@detail.Quantity</td>
                                                <td class="text-end">@detail.UnitPrice.ToString("C0")</td>
                                                <td class="text-end">@detail.TotalPrice.ToString("C0")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input asp-for="Id" type="hidden" />
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i>
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this sales order? This action cannot be undone.')">
                                <i class="fas fa-trash"></i>
                                Delete Sales Order
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
