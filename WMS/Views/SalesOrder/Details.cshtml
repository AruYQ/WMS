@model WMS.Models.ViewModels.SalesOrderViewModel

@{
    ViewData["Title"] = "Sales Order Details";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="page-title">
                <i class="fas fa-shopping-cart me-2"></i>
                Sales Order Details
            </h1>
            <p class="page-subtitle">View complete order information and manage status</p>
        </div>
        <div class="col-auto">
            <div class="btn-group" role="group">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Back to Orders
                </a>
                @if (Model.Status == "Draft")
                {
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                        <i class="fas fa-edit"></i>
                        Edit Order
                    </a>
                }
                @if (Model.Status == "Draft")
                {
                    <form asp-action="Confirm" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-success" 
                                onclick="return confirm('Are you sure you want to confirm this Sales Order? This will reserve stock and make it ready for picking.')">
                            <i class="fas fa-check-circle"></i>
                            Confirm Order
                        </button>
                    </form>
                }
                @if (Model.Status == "Confirmed")
                {
                    <a href="@Url.Action("GenerateFromSalesOrder", "Picking", new { salesOrderId = Model.Id })" class="btn btn-primary">
                        <i class="fas fa-boxes"></i>
                        Generate Picking
                    </a>
                }
                @if (Model.Status == "Draft" || Model.Status == "Confirmed")
                {
                    <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger">
                        <i class="fas fa-trash"></i>
                        Delete Order
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Order Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">SO Number:</label>
                                <div class="fw-bold fs-5">@Model.SONumber</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Status:</label>
                                <div>
                                    <span class="badge @(Model.Status switch {
                                        "Draft" => "bg-warning",
                                        "Confirmed" => "bg-info", 
                                        "Shipped" => "bg-primary",
                                        "Completed" => "bg-success",
                                        "Cancelled" => "bg-danger",
                                        _ => "bg-secondary"
                                    }) fs-6">
                                        @Model.Status
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Customer:</label>
                                <div class="fw-bold">@Model.CustomerName</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label text-muted">Order Date:</label>
                                <div class="fw-medium">@Model.OrderDate.ToString("MMM dd, yyyy")</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label text-muted">Required Date:</label>
                                <div class="fw-medium">
                                    @if (Model.RequiredDate.HasValue)
                                    {
                                        @Model.RequiredDate.Value.ToString("MMM dd, yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not specified</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mb-3">
                            <label class="form-label text-muted">Notes:</label>
                            <div class="border p-3 rounded bg-light">@Model.Notes</div>
                        </div>
                    }
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-boxes me-2"></i>
                        Order Items
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Details.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Item</th>
                                        <th>Unit</th>
                                        <th class="text-end">Quantity</th>
                                        <th class="text-end">Unit Price</th>
                                        <th class="text-end">Total Price</th>
                                        <th class="text-center">Stock</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detail in Model.Details)
                                    {
                                        <tr>
                                            <td>
                                                <div class="fw-medium">@detail.ItemCode</div>
                                                <div class="small text-muted">@detail.ItemName</div>
                                                @if (!string.IsNullOrEmpty(detail.Notes))
                                                {
                                                    <div class="small text-warning">
                                                        <i class="fas fa-sticky-note me-1"></i>
                                                        @detail.Notes
                                                    </div>
                                                }
                                            </td>
                                            <td>@detail.ItemUnit</td>
                                            <td class="text-end">
                                                <span class="fw-medium">@detail.Quantity.ToString("N0")</span>
                                            </td>
                                            <td class="text-end">
                                                <span class="fw-medium">@detail.UnitPrice.ToString("C0")</span>
                                            </td>
                                            <td class="text-end">
                                                <span class="fw-medium text-success">@detail.TotalPrice.ToString("C0")</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge @(detail.IsStockSufficient ? "bg-success" : "bg-danger")">
                                                    @detail.AvailableStock
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="table-active">
                                        <th colspan="4" class="text-end">Total Amount:</th>
                                        <th class="text-end">
                                            <span class="h5 text-success mb-0">@Model.TotalAmount.ToString("C0")</span>
                                        </th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Items Found</h5>
                            <p class="text-muted">This order doesn't have any items.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card sticky-top" style="top: 20px;">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-calculator me-2"></i>
                        Order Summary
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center mb-3">
                        <div class="col-6">
                            <div class="h3 text-primary mb-1">@Model.Details.Count</div>
                            <div class="small text-muted">Items</div>
                        </div>
                        <div class="col-6">
                            <div class="h3 text-success mb-1">@Model.Details.Sum(d => d.Quantity)</div>
                            <div class="small text-muted">Total Qty</div>
                        </div>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between mb-3">
                        <span class="fw-bold">Total Amount:</span>
                        <span class="fw-bold text-success h5">@Model.TotalAmount.ToString("C0")</span>
                    </div>

                    <div class="mt-3">
                        <div class="small text-muted mb-2">Order Timeline:</div>
                        <div class="small">
                            <div class="d-flex justify-content-between mb-1">
                                <span>Created:</span>
                                <span>@DateTime.Now.ToString("MMM dd, yyyy")</span>
                            </div>
                            @if (Model.Status != "Draft")
                            {
                                <div class="d-flex justify-content-between mb-1">
                                    <span>Confirmed:</span>
                                    <span>@DateTime.Now.ToString("MMM dd, yyyy")</span>
                                </div>
                            }
                            @if (Model.Status == "Shipped" || Model.Status == "Completed")
                            {
                                <div class="d-flex justify-content-between mb-1">
                                    <span>Shipped:</span>
                                    <span>@DateTime.Now.ToString("MMM dd, yyyy")</span>
                                </div>
                            }
                            @if (Model.Status == "Completed")
                            {
                                <div class="d-flex justify-content-between mb-1">
                                    <span>Completed:</span>
                                    <span>@DateTime.Now.ToString("MMM dd, yyyy")</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
