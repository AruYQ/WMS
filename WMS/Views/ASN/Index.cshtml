@section Scripts {
    <script src="~/js/asn-manager.js"></script>
    <script src="~/js/asn-purchase-order-manager.js"></script>
    <script src="~/js/asn-location-manager.js"></script>
    <script src="~/js/asn-item-autocomplete.js"></script>
    
    <script>
        // Cancel ASN functionality
        let currentASNId = null;

        // Function to show cancel modal
        function showCancelASNModal(asnId, asnNumber) {
            currentASNId = asnId;
            document.getElementById('cancelASNNumber').textContent = asnNumber;
            document.getElementById('cancelASNReason').value = '';
            document.getElementById('cancelASNReasonCount').textContent = '0';
            
            // Character counter
            const reasonTextarea = document.getElementById('cancelASNReason');
            const updateCounter = function() {
                const count = reasonTextarea.value.length;
                document.getElementById('cancelASNReasonCount').textContent = count;
                if (count > 450) {
                    document.getElementById('cancelASNReasonCount').classList.add('text-warning');
                } else {
                    document.getElementById('cancelASNReasonCount').classList.remove('text-warning');
                }
            };

            // Remove existing listeners and add new one
            reasonTextarea.removeEventListener('input', updateCounter);
            reasonTextarea.addEventListener('input', updateCounter);
            
            const modal = new bootstrap.Modal(document.getElementById('cancelASNModal'));
            modal.show();
        }

        // Handle cancel confirmation
        document.getElementById('confirmCancelASNBtn').addEventListener('click', async function() {
            const reason = document.getElementById('cancelASNReason').value.trim();
            
            if (!reason) {
                alert('Reason is required');
                return;
            }
            
            if (reason.length > 500) {
                alert('Reason cannot exceed 500 characters');
                return;
            }
            
            this.disabled = true;
            const originalText = this.innerHTML;
            this.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Processing...';
            
            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';
                const response = await fetch(`/api/asn/${currentASNId}/cancel`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({ Reason: reason })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('ASN cancelled successfully');
                    // Close modal
                    bootstrap.Modal.getInstance(document.getElementById('cancelASNModal')).hide();
                    // Reload ASNs
                    if (window.asnManager) {
                        window.asnManager.loadASNs();
                    } else {
                        location.reload();
                    }
                } else {
                    alert(result.message || 'Error cancelling ASN');
                    this.disabled = false;
                    this.innerHTML = originalText;
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error cancelling ASN');
                this.disabled = false;
                this.innerHTML = originalText;
            }
        });

        // Make function globally available
        window.showCancelASNModal = showCancelASNModal;
    </script>
    
