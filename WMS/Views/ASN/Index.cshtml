<!-- Purchase Order Advanced Search Modal -->
<div class="modal fade" id="poAdvancedSearchModal" tabindex="-1" aria-labelledby="poAdvancedSearchModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="poAdvancedSearchModalLabel">
                    <i class="fas fa-search me-2"></i>
                    Advanced Search Purchase Order
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Search Form -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="fas fa-filter me-2"></i>
                            Search Criteria
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label for="asnSearchPONumber" class="form-label">PO Number</label>
                                    <input type="text" class="form-control" id="asnSearchPONumber" placeholder="Enter PO number">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label for="asnSearchSupplierName" class="form-label">Supplier Name</label>
                                    <input type="text" class="form-control" id="asnSearchSupplierName" placeholder="Enter supplier name">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="mb-3">
                                    <label for="asnSearchOrderDateFrom" class="form-label">Order Date From</label>
                                    <input type="date" class="form-control" id="asnSearchOrderDateFrom">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="mb-3">
                                    <label for="asnSearchOrderDateTo" class="form-label">Order Date To</label>
                                    <input type="date" class="form-control" id="asnSearchOrderDateTo">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <button type="button" class="btn btn-primary me-2" onclick="asnPOManager.searchPOAdvanced()">
                                    <i class="fas fa-search me-1"></i>Search
                                </button>
                                <button type="button" class="btn btn-outline-secondary" onclick="asnPOManager.clearAdvancedSearch()">
                                    <i class="fas fa-times me-1"></i>Clear
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Search Results -->
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="fas fa-list me-2"></i>
                            Search Results
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>PO Number</th>
                                        <th>Supplier Name</th>
                                        <th>Supplier Email</th>
                                        <th>Order Date</th>
                                        <th>Expected Delivery</th>
                                        <th>Status</th>
                                        <th>Total Amount</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody id="poAdvancedSearchResultsBody">
                                    <tr>
                                        <td colspan="8" class="text-center py-4">
                                            <i class="fas fa-search fa-2x text-muted mb-2"></i>
                                            <p class="text-muted">Enter search criteria and click Search to find Purchase Orders</p>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        
                        <!-- Pagination -->
                        <nav id="poAdvancedSearchPagination" class="mt-3">
                            <!-- Pagination will be loaded here -->
                        </nav>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Location Advanced Search Modal -->
<div class="modal fade" id="locationAdvancedSearchModal" tabindex="-1" aria-labelledby="locationAdvancedSearchModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="locationAdvancedSearchModalLabel">
                    <i class="fas fa-search me-2"></i>
                    Advanced Search Location
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Search Form -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="fas fa-filter me-2"></i>
                            Search Criteria
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label for="asnSearchLocationName" class="form-label">Location Name</label>
                                    <input type="text" class="form-control" id="asnSearchLocationName" placeholder="Enter location name">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label for="asnSearchLocationCode" class="form-label">Location Code</label>
                                    <input type="text" class="form-control" id="asnSearchLocationCode" placeholder="Enter location code">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="mb-3">
                                    <label for="asnSearchLocationDateFrom" class="form-label">Created Date From</label>
                                    <input type="date" class="form-control" id="asnSearchLocationDateFrom">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="mb-3">
                                    <label for="asnSearchLocationDateTo" class="form-label">Created Date To</label>
                                    <input type="date" class="form-control" id="asnSearchLocationDateTo">
                                </div>
                            </div>
                        </div>
