@model WMS.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    var isAdmin = ViewBag.IsAdmin as bool? ?? false;
    var isWarehouseStaff = ViewBag.IsWarehouseStaff as bool? ?? false;
    var isSuperAdmin = ViewBag.IsSuperAdmin as bool? ?? false;
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h1 class="page-title">
                <i class="fas fa-tachometer-alt me-2"></i>
                Dashboard
                @if (isAdmin)
                {
                    <span class="badge bg-primary ms-2">Admin View</span>
                }
                else if (isWarehouseStaff)
                {
                    <span class="badge bg-success ms-2">Warehouse Staff View</span>
                }
            </h1>
            <p class="page-subtitle">Warehouse Management System Overview</p>
        </div>
        <div class="col-auto">
            <button type="button" class="btn btn-outline-primary" id="refreshDashboard" onclick="location.reload()">
                <i class="fas fa-sync-alt"></i>
                Refresh
            </button>
        </div>
    </div>
</div>

@if (Model.IsSuperAdminView)
{
    <div class="row mb-4">
        <div class="col-lg-4 col-md-6 mb-3">
            <div class="card border-primary h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="h2 mb-0 text-primary">@Model.TotalCompaniesManaged.ToString("N0")</div>
                            <div class="small text-muted text-uppercase">Companies Managed</div>
                        </div>
                        <div class="text-primary">
                            <i class="fas fa-building fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-3">
            <div class="card border-success h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="h2 mb-0 text-success">@Model.TotalUsersAcrossCompanies.ToString("N0")</div>
                            <div class="small text-muted text-uppercase">Total Users</div>
                        </div>
                        <div class="text-success">
                            <i class="fas fa-users fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-12 mb-3">
            <div class="card border-info h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="h2 mb-0 text-info">@Model.CompanyUserSummaries.Count(summary => summary.IsActive).ToString("N0")</div>
                            <div class="small text-muted text-uppercase">Active Companies</div>
                        </div>
                        <div class="text-info">
                            <i class="fas fa-check-circle fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-users me-2"></i>
                Users per Company
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Company</th>
                            <th class="text-center">Total Users</th>
                            <th class="text-center">Active</th>
                            <th class="text-center">Inactive</th>
                            <th class="text-center">Max Users</th>
                            <th>Recent Login</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.CompanyUserSummaries.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-2x mb-2 d-block"></i>
                                    No company data available.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var summary in Model.CompanyUserSummaries)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-semibold">
                                            @summary.CompanyName
                                            <span class="@summary.StatusBadgeClass ms-2">@((summary.IsActive ? "Active" : "Inactive"))</span>
                                        </div>
                                        <div class="text-muted small">@summary.CompanyCode</div>
                                    </td>
                                    <td class="text-center fw-semibold">@summary.TotalUsers.ToString("N0")</td>
                                    <td class="text-center text-success fw-semibold">@summary.ActiveUsers.ToString("N0")</td>
                                    <td class="text-center text-muted fw-semibold">@summary.InactiveUsers.ToString("N0")</td>
                                    <td class="text-center">@summary.UtilizationDisplay</td>
                                    <td>
                                        <div class="fw-medium">@summary.LastLoginUser</div>
                                        <div class="text-muted small">@summary.LastLoginDisplay</div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-clock me-2"></i>
                Recent Logins
            </h5>
        </div>
        <div class="card-body p-0">
            @if (!Model.RecentLoginSummaries.Any())
            {
                <div class="p-4 text-center text-muted">
                    <i class="fas fa-user-clock fa-3x mb-3"></i>
                    <div>No recent logins recorded.</div>
                </div>
            }
            else
            {
                <div class="list-group list-group-flush">
                    @foreach (var login in Model.RecentLoginSummaries)
                    {
                        <div class="list-group-item d-flex align-items-center">
                            <div class="me-3 text-primary">
                                <i class="fas fa-user-circle fa-lg"></i>
                            </div>
                            <div class="flex-fill">
                                <div class="fw-semibold">@login.FullName <span class="text-muted">(@login.Username)</span></div>
                                <div class="text-muted small">
                                    <i class="fas fa-building me-1"></i>@login.CompanyName
                                    <span class="ms-2 badge bg-light text-dark">@login.CompanyCode</span>
                                </div>
                            </div>
                            <div class="text-muted small text-end">
                                <i class="fas fa-clock me-1"></i>@login.LastLoginDisplay
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="text-center text-muted small">
                <i class="fas fa-sync-alt me-1"></i>
                Last updated: @Model.LastRefreshDisplay
            </div>
        </div>
    </div>
}

@if (!Model.IsSuperAdminView)
{
    <!-- Quick Stats Overview -->
<div class="row mb-4">
    @if (isAdmin || isWarehouseStaff)
    {
        <!-- Purchase Orders -->
        <div class="col-xl-3 col-lg-6 col-md-6 mb-3">
            <div class="card border-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="h3 mb-0 text-primary">@Model.InboundStats.TotalPurchaseOrders.ToString("N0")</div>
                            <div class="small text-muted">Total Purchase Orders</div>
                            @if (Model.InboundStats.DraftPOs > 0)
                            {
                                <div class="small mt-1">
                                    <span class="badge bg-warning">@Model.InboundStats.DraftPOs Draft</span>
                                </div>
                            }
                        </div>
                        <div class="text-primary">
                            <i class="fas fa-shopping-cart fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sales Orders -->
        <div class="col-xl-3 col-lg-6 col-md-6 mb-3">
            <div class="card border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="h3 mb-0 text-success">@Model.OutboundStats.TotalSalesOrders.ToString("N0")</div>
                            <div class="small text-muted">Total Sales Orders</div>
                            @if (Model.OutboundStats.PickedSOs > 0)
                            {
                                <div class="small mt-1">
                                    <span class="badge bg-info">@Model.OutboundStats.PickedSOs Picked</span>
                                </div>
                            }
                        </div>
                        <div class="text-success">
                            <i class="fas fa-receipt fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Inventory Value -->
    <div class="col-xl-3 col-lg-6 col-md-6 mb-3">
        <div class="card border-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="h3 mb-0 text-warning">@Model.InventoryStats.TotalInventoryValueDisplay</div>
                        <div class="small text-muted">Total Inventory Value</div>
                        <div class="small mt-1">@Model.InventoryStats.ItemsInStock.ToString("N0") Items in Stock</div>
                    </div>
                    <div class="text-warning">
                        <i class="fas fa-boxes fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Actions -->
    <div class="col-xl-3 col-lg-6 col-md-6 mb-3">
        <div class="card border-danger">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="h3 mb-0 text-danger">@Model.PendingActions.TotalPendingActions.ToString("N0")</div>
                        <div class="small text-muted">Pending Actions</div>
                        <div class="small mt-1">
                            <a href="#pendingActions" class="text-danger text-decoration-none">
                                View Details <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                    <div class="text-danger">
                        <i class="fas fa-exclamation-triangle fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- INBOUND OPERATIONS SECTION -->
@if (isAdmin || isWarehouseStaff)
{
    <div class="card mb-4 border-primary">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-arrow-down me-2"></i>
                INBOUND OPERATIONS
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Purchase Order Statistics -->
                <div class="col-lg-6 mb-4">
                    <h6 class="text-primary mb-3">
                        <i class="fas fa-shopping-cart me-2"></i>
                        Purchase Orders
                    </h6>
                    <div class="row g-3">
                        <div class="col-6">
                            <div class="stat-box">
                                <div class="stat-value">@Model.InboundStats.TotalPurchaseOrders</div>
                                <div class="stat-label">Total PO</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-box">
                                <div class="stat-value text-warning">@Model.InboundStats.DraftPOs</div>
                                <div class="stat-label">Draft</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- ASN Statistics -->
                <div class="col-lg-6 mb-4">
                    <h6 class="text-info mb-3">
                        <i class="fas fa-truck me-2"></i>
                        ASN (Receiving)
                    </h6>
                    <div class="row g-3">
                        <div class="col-6">
                            <div class="stat-box">
                                <div class="stat-value">@Model.InboundStats.TotalASNs</div>
                                <div class="stat-label">Total ASN</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-box">
                                <div class="stat-value text-warning">@Model.InboundStats.PendingASNs</div>
                                <div class="stat-label">Pending</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Putaway Statistics -->
                <div class="col-lg-12">
                    <div class="alert alert-info mb-0">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h6 class="mb-1">
                                    <i class="fas fa-dolly me-2"></i>
                                    Putaway Operations
                                </h6>
                                <div class="small">
                                    <strong>@Model.InboundStats.ItemsWaitingPutaway</strong> items waiting for putaway
                                </div>
                            </div>
                            <div class="col-md-4 text-end">
                                <a href="/Inventory/Putaway" class="btn btn-info btn-sm">
                                    <i class="fas fa-arrow-right me-1"></i>
                                    Go to Putaway
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- OUTBOUND OPERATIONS SECTION -->
@if (isAdmin || isWarehouseStaff)
{
    <div class="card mb-4 border-success">
        <div class="card-header bg-success text-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-arrow-up me-2"></i>
                OUTBOUND OPERATIONS
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Sales Order Statistics -->
                <div class="col-lg-6 mb-4">
                    <h6 class="text-success mb-3">
                        <i class="fas fa-receipt me-2"></i>
                        Sales Orders
                    </h6>
                    <div class="row g-3">
                        <div class="col-6">
                            <div class="stat-box">
                                <div class="stat-value">@Model.OutboundStats.TotalSalesOrders</div>
                                <div class="stat-label">Total SO</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-box">
                                <div class="stat-value text-warning">@Model.OutboundStats.PendingSOs</div>
                                <div class="stat-label">Pending</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Picking Statistics -->
                <div class="col-lg-6 mb-4">
                    <h6 class="text-warning mb-3">
                        <i class="fas fa-clipboard-list me-2"></i>
                        Picking
                    </h6>
                    <div class="row g-3">
                        <div class="col-6">
                            <div class="stat-box">
                                <div class="stat-value">@Model.OutboundStats.TotalPickings</div>
                                <div class="stat-label">Total Pickings</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-box">
                                <div class="stat-value text-warning">@Model.OutboundStats.PendingPickings</div>
                                <div class="stat-label">Pending</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
