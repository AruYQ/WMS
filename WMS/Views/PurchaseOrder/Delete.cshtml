@using WMS.Models
@model PurchaseOrder
@{
    ViewData["Title"] = "Delete Purchase Order";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h1 class="page-title">
                <i class="fas fa-trash text-danger me-2"></i>
                Delete Purchase Order
            </h1>
            <p class="page-subtitle">Confirm deletion of @Model.PONumber</p>
        </div>
        <div class="col-auto">
            <div class="btn-group">
                <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-outline-primary">
                    <i class="fas fa-eye"></i>
                    View Details
                </a>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <!-- Warning Alert -->
        <div class="alert alert-danger" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                <div>
                    <h5 class="alert-heading mb-1">Are you sure you want to delete this Purchase Order?</h5>
                    <p class="mb-0">This action cannot be undone. The purchase order and all its details will be permanently removed from the system.</p>
                </div>
            </div>
        </div>

        <!-- Purchase Order Information -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    Purchase Order Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">PO Number:</label>
                            <div class="fw-bold text-primary fs-5">@Model.PONumber</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-muted">Supplier:</label>
                            <div class="fw-medium">@Model.Supplier?.Name</div>
                            @if (!string.IsNullOrEmpty(Model.Supplier?.Email))
                            {
                                <div class="small text-muted">
                                    <i class="fas fa-envelope me-1"></i>
                                    @Model.Supplier.Email
                                </div>
                            }
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-muted">Order Date:</label>
                            <div class="fw-medium">@Model.OrderDate.ToString("dddd, dd MMMM yyyy")</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">Status:</label>
                            <div>
                                <span class="@Model.StatusCssClass">@Model.StatusIndonesia</span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-muted">Total Amount:</label>
                            <div class="fw-bold text-success fs-4">@Model.TotalAmount.ToString("C0")</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-muted">Expected Delivery:</label>
                            @if (Model.ExpectedDeliveryDate.HasValue)
                            {
                                <div class="fw-medium">@Model.ExpectedDeliveryDate.Value.ToString("dddd, dd MMMM yyyy")</div>
                            }
                            else
                            {
                                <div class="text-muted">Not specified</div>
                            }
                        </div>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div class="row">
                        <div class="col-12">
                            <label class="form-label text-muted">Notes:</label>
                            <div class="border p-3 rounded bg-light">@Model.Notes</div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Order Items Summary -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list me-2"></i>
                    Items to be Deleted
                    <span class="badge bg-warning ms-2">@Model.TotalItemTypes items</span>
                </h5>
            </div>
            <div class="card-body p-0">
                @if (Model.PurchaseOrderDetails.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm mb-0">
                            <thead>
                                <tr>
                                    <th>Item Code</th>
                                    <th>Item Name</th>
                                    <th class="text-end">Quantity</th>
                                    <th class="text-end">Unit Price</th>
                                    <th class="text-end">Total Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detail in Model.PurchaseOrderDetails.OrderBy(d => d.Item.ItemCode))
                                {
                                    <tr>
                                        <td class="fw-medium text-primary">@detail.Item.ItemCode</td>
                                        <td>@detail.Item.Name</td>
                                        <td class="text-end">@detail.Quantity.ToString("N0") @detail.Item.Unit</td>
                                        <td class="text-end">@detail.UnitPrice.ToString("C")</td>
                                        <td class="text-end fw-medium">@detail.TotalPrice.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-active">
                                    <th colspan="4" class="text-end">Total:</th>
                                    <th class="text-end text-success">@Model.TotalAmount.ToString("C")</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-box-open fa-2x text-muted mb-2"></i>
                        <p class="text-muted mb-0">No items in this purchase order</p>
                    </div>
                }
            </div>
        </div>

        <!-- System Information -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info me-2"></i>
                    System Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="small">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Created:</span>
                                <span>@Model.CreatedDate.ToString("dd MMM yyyy HH:mm")</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Last Modified:</span>
                                <span>@(Model.ModifiedDate?.ToString("dd MMM yyyy HH:mm") ?? "Never")</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        @if (Model.EmailSent)
                        {
                            <div class="alert alert-info py-2 mb-0">
                                <i class="fas fa-envelope me-2"></i>
                                <small>Email sent on @Model.EmailSentDate?.ToString("dd MMM yyyy HH:mm")</small>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Confirmation Form -->
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Confirm Deletion
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <ul class="mb-0">
                        <li>This purchase order will be permanently deleted</li>
                        <li>All @Model.TotalItemTypes item details will be removed</li>
                        <li>This action cannot be undone</li>
                        @if (Model.AdvancedShippingNotices.Any())
                        {
                            <li class="text-danger">Warning: This PO has @Model.AdvancedShippingNotices.Count related ASN(s)</li>
                        }
                    </ul>
                </div>

                <form method="post">
                    <input asp-for="Id" type="hidden" />
                    <input name="__RequestVerificationToken" type="hidden" value="@Html.AntiForgeryToken().ToString().Replace("<input name=\"__RequestVerificationToken\" type=\"hidden\" value=\"", "").Replace("\" />", "")" />

                    <div class="d-flex gap-3 justify-content-end">
                        <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-secondary">
                            <i class="fas fa-times me-1"></i>
                            Cancel
                        </a>
                        <button type="submit" class="btn btn-danger" id="deleteButton" onclick="return confirmDelete()">
                            <i class="fas fa-trash me-1"></i>
                            Delete Purchase Order
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete() {
        const confirmation = confirm('Are you absolutely sure you want to delete Purchase Order @Model.PONumber?\n\nThis action cannot be undone!');

        if (confirmation) {
            // Show loading state
            const deleteButton = document.getElementById('deleteButton');
            const originalText = deleteButton.innerHTML;
            deleteButton.disabled = true;
            deleteButton.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Deleting...';

            // Re-enable after 5 seconds as fallback
            setTimeout(() => {
                deleteButton.disabled = false;
                deleteButton.innerHTML = originalText;
            }, 5000);

            return true;
        }

        return false;
    }

    // Prevent accidental page close
    window.addEventListener('beforeunload', function(e) {
        if (document.activeElement && document.activeElement.type === 'submit') {
            return; // Allow form submission
        }
        e.preventDefault();
        e.returnValue = '';
    });
</script>