@using WMS.Models
@model PurchaseOrder
@{
    ViewData["Title"] = $"Purchase Order {Model.PONumber}";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h1 class="page-title">
                <i class="fas fa-file-invoice me-2"></i>
                Purchase Order Details
            </h1>
            <p class="page-subtitle">@Model.PONumber</p>
        </div>
        <div class="col-auto">
            <div class="btn-group" role="group">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Back to List
                </a>
                @if (Model.CanBeEdited)
                {
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-outline-primary">
                        <i class="fas fa-edit"></i>
                        Edit
                    </a>
                }
                @if (Model.CanBeSent)
                {
                    <a href="@Url.Action("Send", new { id = Model.Id })" class="btn btn-success">
                        <i class="fas fa-paper-plane"></i>
                        Send Email
                    </a>
                }
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="fas fa-ellipsis-v"></i>
                        More
                    </button>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item" href="#" onclick="window.print()">
                                <i class="fas fa-print me-2"></i>
                                Print PO
                            </a>
                        </li>
                        @if (Model.CanBeCancelled)
                        {
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-danger" href="#" onclick="confirmCancel(@Model.Id, '@Model.PONumber')">
                                    <i class="fas fa-ban me-2"></i>
                                    Cancel PO
                                </a>
                            </li>
                        }
                        @if (Model.CanBeEdited)
                        {
                            <li>
                                <a class="dropdown-item text-danger" href="@Url.Action("Delete", new { id = Model.Id })">
                                    <i class="fas fa-trash me-2"></i>
                                    Delete PO
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Purchase Order Header Information -->
<div class="row mb-4">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    Purchase Order Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">PO Number:</label>
                            <div class="fw-bold text-primary fs-5">@Model.PONumber</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-muted">Supplier:</label>
                            <div class="fw-medium">@Model.Supplier?.Name</div>
                            @if (!string.IsNullOrEmpty(Model.Supplier?.Email))
                            {
                                <div class="small text-muted">
                                    <i class="fas fa-envelope me-1"></i>
                                    @Model.Supplier.Email
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.Supplier?.Phone))
                            {
                                <div class="small text-muted">
                                    <i class="fas fa-phone me-1"></i>
                                    @Model.Supplier.Phone
                                </div>
                            }
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-muted">Order Date:</label>
                            <div class="fw-medium">@Model.OrderDate.ToString("dddd, dd MMMM yyyy")</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">Expected Delivery:</label>
                            @if (Model.ExpectedDeliveryDate.HasValue)
                            {
                                var daysUntilDelivery = (Model.ExpectedDeliveryDate.Value - DateTime.Today).Days;
                                <div class="fw-medium @(daysUntilDelivery < 0 ? "text-danger" : daysUntilDelivery <= 3 ? "text-warning" : "")">
                                    @Model.ExpectedDeliveryDate.Value.ToString("dddd, dd MMMM yyyy")
                                </div>
                                @if (daysUntilDelivery < 0)
                                {
                                    <div class="small text-danger">
                                        <i class="fas fa-exclamation-triangle me-1"></i>
                                        @Math.Abs(daysUntilDelivery) days overdue
                                    </div>
                                }
                                else if (daysUntilDelivery <= 3 && daysUntilDelivery > 0)
                                {
                                    <div class="small text-warning">
                                        <i class="fas fa-clock me-1"></i>
                                        @daysUntilDelivery days left
                                    </div>
                                }
                                else if (daysUntilDelivery > 3)
                                {
                                    <div class="small text-success">
                                        <i class="fas fa-calendar me-1"></i>
                                        @daysUntilDelivery days remaining
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-muted">Not specified</div>
                            }
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-muted">Status:</label>
                            <div>
                                <span class="@Model.StatusCssClass">@Model.StatusIndonesia</span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-muted">Total Amount:</label>
                            <div class="fw-bold text-success fs-4">@Model.TotalAmount.ToString("C0")</div>
                        </div>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div class="row mt-3">
                        <div class="col-12">
                            <label class="form-label text-muted">Notes:</label>
                            <div class="border p-3 rounded bg-light">@Model.Notes</div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-pie me-2"></i>
                    Summary
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="h3 text-primary mb-1">@Model.TotalItemTypes</div>
                        <div class="small text-muted">Item Types</div>
                    </div>
                    <div class="col-6">
                        <div class="h3 text-success mb-1">@Model.TotalQuantity.ToString("N0")</div>
                        <div class="small text-muted">Total Quantity</div>
                    </div>
                </div>

                @if (Model.EmailSent)
                {
                    <div class="alert alert-success mt-3 py-2">
                        <i class="fas fa-check-circle me-2"></i>
                        <small>
                            Email sent on @Model.EmailSentDate?.ToString("dd MMM yyyy HH:mm")
                        </small>
                    </div>
                }

                <div class="mt-3">
                    <div class="small text-muted mb-2">System Information:</div>
                    <div class="small">
                        <div class="d-flex justify-content-between">
                            <span>Created:</span>
                            <span>@Model.CreatedDate.ToString("dd MMM yyyy HH:mm")</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Last Modified:</span>
                            <span>@(Model.ModifiedDate?.ToString("dd MMM yyyy HH:mm") ?? "Never")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Purchase Order Details -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="fas fa-list me-2"></i>
            Order Items
        </h5>
    </div>
    <div class="card-body p-0">
        @if (Model.PurchaseOrderDetails.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th style="width: 5%;">#</th>
                            <th style="width: 15%;">Item Code</th>
                            <th style="width: 30%;">Item Name</th>
                            <th style="width: 10%;">Unit</th>
                            <th style="width: 10%;" class="text-end">Quantity</th>
                            <th style="width: 15%;" class="text-end">Unit Price</th>
                            <th style="width: 15%;" class="text-end">Total Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int counter = 1;
                        }
                        @foreach (var detail in Model.PurchaseOrderDetails.OrderBy(d => d.Item.ItemCode))
                        {
                            <tr>
                                <td class="text-muted">@counter</td>
                                <td>
                                    <span class="fw-medium text-primary">@detail.Item.ItemCode</span>
                                </td>
                                <td>
                                    <div class="fw-medium">@detail.Item.Name</div>
                                    @if (!string.IsNullOrEmpty(detail.Item.Description))
                                    {
                                        <div class="small text-muted">@detail.Item.Description</div>
                                    }
                                    @if (!string.IsNullOrEmpty(detail.Notes))
                                    {
                                        <div class="small text-warning">
                                            <i class="fas fa-sticky-note me-1"></i>
                                            @detail.Notes
                                        </div>
                                    }
                                </td>
                                <td>@detail.Item.Unit</td>
                                <td class="text-end">
                                    <span class="fw-medium">@detail.Quantity.ToString("N0")</span>
                                </td>
                                <td class="text-end">
                                    <span class="fw-medium">@detail.UnitPrice.ToString("C")</span>
                                </td>
                                <td class="text-end">
                                    <span class="fw-medium text-success">@detail.TotalPrice.ToString("C")</span>
                                </td>
                            </tr>
                            counter++;
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-active">
                            <th colspan="6" class="text-end">Total:</th>
                            <th class="text-end">
                                <span class="h5 text-success mb-0">@Model.TotalAmount.ToString("C")</span>
                            </th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No Items Added</h5>
                <p class="text-muted">Add items to this purchase order to get started.</p>
                @if (Model.CanBeEdited)
                {
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                        <i class="fas fa-edit me-1"></i>
                        Add Items
                    </a>
                }
            </div>
        }
    </div>
</div>

<!-- Related ASNs Section -->
@if (Model.AdvancedShippingNotices.Any())
{
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-truck me-2"></i>
                Related ASN (Advanced Shipping Notices)
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ASN Number</th>
                            <th>Ship Date</th>
                            <th>Expected Arrival</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var asn in Model.AdvancedShippingNotices.OrderByDescending(a => a.CreatedDate))
                        {
                            <tr>
                                <td>
                                    <span class="fw-medium text-primary">@asn.ASNNumber</span>
                                </td>
                                <td>@asn.ShipmentDate.ToString("dd MMM yyyy")</td>
                                <td>@asn.ExpectedArrivalDate?.ToString("dd MMM yyyy")</td>
                                <td>
                                    <span class="badge bg-info">@asn.Status</span>
                                </td>
                                <td>
                                    <a href="/ASN/Details/@asn.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i>
                                        View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<!-- Cancel Confirmation Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    Cancel Purchase Order
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to cancel Purchase Order <strong id="cancelPONumber"></strong>?</p>
                <div class="alert alert-warning">
                    <i class="fas fa-info-circle me-2"></i>
                    This action cannot be undone. The purchase order will be marked as cancelled.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>
                    Close
                </button>
                <form id="cancelForm" method="post" style="display: inline;">
                    <input name="__RequestVerificationToken" type="hidden" value="@Html.AntiForgeryToken().ToString().Replace("<input name=\"__RequestVerificationToken\" type=\"hidden\" value=\"", "").Replace("\" />", "")" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-ban me-1"></i>
                        Cancel Purchase Order
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmCancel(poId, poNumber) {
        document.getElementById('cancelPONumber').textContent = poNumber;
        document.getElementById('cancelForm').action = '@Url.Action("Cancel")/' + poId;
        new bootstrap.Modal(document.getElementById('cancelModal')).show();
    }

    // Print functionality
    function printPO() {
        // Hide unnecessary elements for printing
        const elementsToHide = document.querySelectorAll('.btn, .navbar, .sidebar, .page-header .col-auto');
        elementsToHide.forEach(el => el.style.display = 'none');

        // Print
        window.print();

        // Restore hidden elements
        elementsToHide.forEach(el => el.style.display = '');
    }
</script>

