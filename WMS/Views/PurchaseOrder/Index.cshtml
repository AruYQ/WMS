            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <p>Are you sure you want to cancel Purchase Order <strong id="cancelPONumber"></strong>?</p>
                    <div class="alert alert-warning">
                        <i class="fas fa-info-circle me-2"></i>
                        This action cannot be undone. The purchase order will be marked as cancelled.
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="cancelPOReason" class="form-label">
                        Reason <span class="text-danger">*</span>
                    </label>
                    <textarea class="form-control" id="cancelPOReason" name="Reason" rows="4" 
                              placeholder="Enter cancellation reason..." required maxlength="500"></textarea>
                    <div class="form-text text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Reason will Replace Notes of the Purchase Order with format: "Cancelation reason : [Reason]"
                    </div>
                    <small class="text-muted float-end">
                        <span id="cancelPOReasonCount">0</span>/500 characters
                    </small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>
                    Close
                </button>
                <button type="button" class="btn btn-danger" id="confirmCancelPOBtn">
                    <i class="fas fa-ban me-1"></i>
                    Cancel Purchase Order
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/purchase-order-manager.js"></script>
    <script src="~/js/purchase-order-supplier-manager.js"></script>
    <script src="~/js/purchase-order-item-manager.js"></script>
    <script>
        // Configure SearchableDropdown for supplier with advanced search
        window.searchableDropdownConfig = window.searchableDropdownConfig || {};
        window.searchableDropdownConfig.supplier = {
            quickSearchEndpoint: '/api/purchaseorder/suppliers/quick-search',
            displayFormat: (item) => `${item.name}`,
            customAdvancedSearch: true, // Use custom advanced search modal
            onAdvancedSearchClick: function() {
                if (window.openPOSupplierAdvancedSearch) {
                    window.openPOSupplierAdvancedSearch();
                } else {
                    console.error('Purchase Order Supplier Advanced Search not available');
                }
            }
        };

        // Cancel Purchase Order functionality
        let currentPOId = null;

        // Function to show cancel modal
        function showCancelPOModal(poId, poNumber) {
            currentPOId = poId;
            document.getElementById('cancelPONumber').textContent = poNumber;
            document.getElementById('cancelPOReason').value = '';
            document.getElementById('cancelPOReasonCount').textContent = '0';
            
            // Character counter
            const reasonTextarea = document.getElementById('cancelPOReason');
            const updateCounter = function() {
                const count = reasonTextarea.value.length;
                document.getElementById('cancelPOReasonCount').textContent = count;
                if (count > 450) {
                    document.getElementById('cancelPOReasonCount').classList.add('text-warning');
                } else {
                    document.getElementById('cancelPOReasonCount').classList.remove('text-warning');
                }
            };

            // Remove existing listeners and add new one
            reasonTextarea.removeEventListener('input', updateCounter);
            reasonTextarea.addEventListener('input', updateCounter);
            
            const modal = new bootstrap.Modal(document.getElementById('cancelPOModal'));
            modal.show();
        }

        // Handle cancel confirmation
        document.getElementById('confirmCancelPOBtn').addEventListener('click', async function() {
            const reason = document.getElementById('cancelPOReason').value.trim();
            
            if (!reason) {
                alert('Reason is required');
                return;
            }
            
            if (reason.length > 500) {
                alert('Reason cannot exceed 500 characters');
                return;
            }
            
            this.disabled = true;
            const originalText = this.innerHTML;
            this.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Processing...';
            
            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';
                const response = await fetch(`/api/purchaseorder/${currentPOId}/cancel`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({ Reason: reason })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('Purchase Order cancelled successfully');
                    // Close modal
                    bootstrap.Modal.getInstance(document.getElementById('cancelPOModal')).hide();
                    // Reload purchase orders
                    if (window.purchaseOrderManager) {
                        window.purchaseOrderManager.loadPurchaseOrders();
                    } else {
                        location.reload();
                    }
                } else {
                    alert(result.message || 'Error cancelling Purchase Order');
                    this.disabled = false;
                    this.innerHTML = originalText;
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error cancelling Purchase Order');
                this.disabled = false;
                this.innerHTML = originalText;
            }
        });

        // Make function globally available
        window.showCancelPOModal = showCancelPOModal;
    </script>
    
