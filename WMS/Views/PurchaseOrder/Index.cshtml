<!-- Purchase Order Advanced Search Modals -->
<!-- Supplier Advanced Search Modal -->
<div class="modal fade" id="poSupplierAdvancedSearchModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Advanced Supplier Search</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="poSupplierAdvancedSearchForm">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="poSearchName" class="form-label">Supplier Name</label>
                                <input type="text" class="form-control" id="poSearchName" placeholder="Enter supplier name">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="poSearchEmail" class="form-label">Email</label>
                                <input type="email" class="form-control" id="poSearchEmail" placeholder="Enter email">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="poSearchPhone" class="form-label">Phone</label>
                                <input type="text" class="form-control" id="poSearchPhone" placeholder="Enter phone">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="poSearchCity" class="form-label">City</label>
                                <input type="text" class="form-control" id="poSearchCity" placeholder="Enter city">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="poSearchContactPerson" class="form-label">Contact Person</label>
                                <input type="text" class="form-control" id="poSearchContactPerson" placeholder="Enter contact person">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="poSearchCreatedDateFrom" class="form-label">Created Date From</label>
                                <input type="date" class="form-control" id="poSearchCreatedDateFrom">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="poSearchCreatedDateTo" class="form-label">Created Date To</label>
                                <input type="date" class="form-control" id="poSearchCreatedDateTo">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">&nbsp;</label>
                                <div>
                                    <button type="button" class="btn btn-primary w-100" onclick="poSupplierManager.searchSuppliersAdvanced()">
                                        <i class="fas fa-search"></i> Search
