@{
    ViewData["Title"] = "Purchase Orders";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h1 class="page-title">
                <i class="fas fa-shopping-cart me-2"></i>
                Purchase Orders
            </h1>
            <p class="page-subtitle">Manage your purchase orders and supplier requests</p>
        </div>
        <div class="col-auto">
            <button type="button" class="btn btn-primary" data-action="create-purchase-order">
                <i class="fas fa-plus"></i>
                Create New PO
            </button>
        </div>
    </div>
</div>

<!-- Dashboard Statistics -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title mb-0" id="totalPurchaseOrders">0</h4>
                        <p class="card-text">Total POs</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-shopping-cart fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title mb-0" id="draftOrders">0</h4>
                        <p class="card-text">Draft</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-edit fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title mb-0" id="sentOrders">0</h4>
                        <p class="card-text">Sent</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-paper-plane fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title mb-0" id="receivedOrders">0</h4>
                        <p class="card-text">Received</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Status Filter -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body py-3">
                <div class="d-flex align-items-center">
                    <label class="me-3 mb-0 fw-medium">Filter by Status:</label>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-primary status-filter-btn active" data-status="All">
                            All <span class="badge bg-primary ms-1">0</span>
                        </button>
                        <button type="button" class="btn btn-outline-secondary status-filter-btn" data-status="Draft">
                            Draft <span class="badge bg-secondary ms-1">0</span>
                        </button>
                        <button type="button" class="btn btn-outline-primary status-filter-btn" data-status="Sent">
                            Sent <span class="badge bg-primary ms-1">0</span>
                        </button>
                        <button type="button" class="btn btn-outline-success status-filter-btn" data-status="Received">
                            Received <span class="badge bg-success ms-1">0</span>
                        </button>
                        <button type="button" class="btn btn-outline-danger status-filter-btn" data-status="Cancelled">
                            Cancelled <span class="badge bg-danger ms-1">0</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Search and Filters -->
<div class="row mb-4">
    <div class="col-md-5">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fas fa-search"></i>
            </span>
            <input type="text" class="form-control" id="searchPurchaseOrders" placeholder="Search by PO number, supplier, or notes...">
        </div>
    </div>
    <div class="col-md-7 text-end">
        <button type="button" class="btn btn-outline-secondary" onclick="window.purchaseOrderManager?.loadPurchaseOrders()">
            <i class="fas fa-sync-alt"></i>
            Refresh
        </button>
    </div>
</div>

<!-- Purchase Orders Table -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="fas fa-list me-2"></i>
            Purchase Orders List
        </h5>
    </div>
    <div class="card-body p-0">
            <div class="table-responsive">
            <table class="table table-hover mb-0" id="purchaseOrdersTable">
                    <thead>
                        <tr>
                            <th>PO Number</th>
                            <th>Supplier</th>
                            <th>Order Date</th>
                            <th>Expected Delivery</th>
                            <th>Status</th>
                            <th>Total Amount</th>
                            <th>Items</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td colspan="8" class="text-center py-4">
                            <div class="text-muted">
                                <i class="fas fa-spinner fa-spin fa-2x mb-2"></i>
                                <p>Loading purchase orders...</p>
                                    </div>
                                </td>
                            </tr>
                    </tbody>
                </table>
            </div>
    </div>
    <div class="card-footer">
        <div id="purchaseOrderPagination" class="d-flex justify-content-center">
            <!-- Pagination will be inserted here -->
            </div>
    </div>
</div>

<!-- Create Purchase Order Modal -->
<div class="modal fade" id="createPurchaseOrderModal" tabindex="-1" aria-labelledby="createPurchaseOrderModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createPurchaseOrderModalLabel">
                    <i class="fas fa-plus-circle me-2"></i>
                    Create New Purchase Order
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="createPurchaseOrderForm">
            <div class="modal-body">
                    <div class="row">
                        <!-- Purchase Order Information -->
                        <div class="col-lg-8">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                                        Purchase Order Information
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="supplierSelect" class="form-label">Supplier <span class="text-danger">*</span></label>
                                                @await Html.PartialAsync("SearchableDropdown", new WMS.Models.ViewModels.SearchableDropdownModel
                                                {
                                                    EntityType = "supplier",
                                                    FieldName = "supplierId",
                                                    FieldId = "supplierSelect",
                                                    Placeholder = "-- Search & Select Supplier --",
                                                    Required = true,
                                                    ShowDropdown = true,
                                                    AllowClear = true,
                                                    HelpText = "Click search icon for advanced search"
                                                })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="orderDate" class="form-label">Order Date</label>
                                                <input type="date" class="form-control" id="orderDate" name="orderDate" readonly style="background-color: #f8f9fa;">
                                                <small class="form-text text-muted">Order date is automatically set to today</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="expectedDeliveryDate" class="form-label">Expected Delivery Date <span class="text-danger">*</span></label>
                                                <input type="date" class="form-control" id="expectedDeliveryDate" name="expectedDeliveryDate" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="notes" class="form-label">Notes</label>
                                        <textarea class="form-control" id="notes" name="notes" rows="3" placeholder="Additional notes or instructions..."></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Summary -->
                        <div class="col-lg-4">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-calculator me-2"></i>
                                        Summary
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label class="form-label">Total Amount</label>
                                        <div class="h4 text-primary" id="createTotalAmount">Rp 0</div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Items Count</label>
                                        <div class="h5" id="createItemsCount">0 items</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Items Section -->
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-boxes me-2"></i>
                                Items
                            </h5>
                            <button type="button" class="btn btn-sm btn-outline-primary" data-action="add-item" disabled>
                                <i class="fas fa-plus"></i>
                                Add Item
                            </button>
                        </div>
                        <div class="card-body">
                            <div class="row mb-2">
                                <div class="col-md-4">
                                    <label class="form-label fw-medium">Item</label>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label fw-medium">Quantity</label>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label fw-medium">Unit Price</label>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label fw-medium">Total</label>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label fw-medium">Action</label>
                                </div>
                            </div>
                            <div id="createItemsContainer">
                                <!-- Items will be added here dynamically -->
                            </div>
                        </div>
                </div>
            </div>
            <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        Create Purchase Order
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

