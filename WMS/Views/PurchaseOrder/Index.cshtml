<!-- Purchase Order Advanced Search Modals -->
@await Html.PartialAsync("PurchaseOrderSupplierAdvancedSearchModal")
@await Html.PartialAsync("PurchaseOrderItemAdvancedSearchModal")

@section Scripts {
    <script src="~/js/purchase-order-manager.js"></script>
    <script>
        // Configure SearchableDropdown for supplier with custom advanced search
        window.searchableDropdownConfig = window.searchableDropdownConfig || {};
        window.searchableDropdownConfig.supplier = {
            quickSearchEndpoint: '/api/purchaseorder/suppliers/quick-search',
            displayFormat: (item) => `${item.name} (${item.code || 'N/A'})`,
            customAdvancedSearch: true, // Use custom advanced search modal
            onAdvancedSearchClick: function() {
                if (window.purchaseOrderManager) {
                    window.purchaseOrderManager.openSupplierAdvancedSearch();
                }
            }
        };

        // Item selection now uses dropdown with advanced search button
        // Advanced search functionality is handled by openItemAdvancedSearch() method

        // Purchase Order now uses specific advanced search modals
        // No universal advanced search configuration needed
    </script>
}
