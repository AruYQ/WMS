@{
    ViewData["Title"] = "Location Management";
}

<!-- Statistics Dashboard -->
<div class="stats-grid">
    <div class="stats-card">
        <div class="stats-icon">
            <i class="fas fa-map-marker-alt"></i>
        </div>
        <div class="stats-number" id="totalLocationsCount">-</div>
        <div class="stats-label">Total Locations</div>
        <div class="stats-description">All warehouse locations</div>
    </div>
    <div class="stats-card">
        <div class="stats-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="stats-number" id="activeLocationsCount">-</div>
        <div class="stats-label">Active Locations</div>
        <div class="stats-description">Available for storage</div>
    </div>
    <div class="stats-card">
        <div class="stats-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <div class="stats-number" id="nearFullLocationsCount">-</div>
        <div class="stats-label">Near Full (≥80%)</div>
        <div class="stats-description">Approaching capacity</div>
    </div>
    <div class="stats-card">
        <div class="stats-icon">
            <i class="fas fa-times-circle"></i>
        </div>
        <div class="stats-number" id="fullLocationsCount">-</div>
        <div class="stats-label">Full Locations</div>
        <div class="stats-description">At maximum capacity</div>
    </div>
</div>

<!-- Filter Section -->
<div class="filter-section">
    <div class="filter-header">
        <i class="fas fa-filter"></i>
        <h6 class="filter-title">Filter Locations</h6>
    </div>
    <div class="filter-grid">
        <div>
            <label class="form-label-compact">Search Locations</label>
            <input type="text" class="form-control-compact" id="searchInput" placeholder="Enter location code or name">
        </div>
        <div>
            <label class="form-label-compact">Status Filter</label>
            <select class="form-control-compact" id="statusFilter">
                <option value="">All Status</option>
                <option value="true">Active</option>
                <option value="false">Inactive</option>
            </select>
        </div>
        <div>
            <label class="form-label-compact">Capacity Filter</label>
            <select class="form-control-compact" id="capacityFilter">
                <option value="">All Capacity</option>
                <option value="available">Available</option>
                <option value="near-full">Near Full (≥80%)</option>
                <option value="full">Full</option>
            </select>
        </div>
        <div class="d-flex align-items-end gap-2">
            <button type="button" class="btn-compact btn-primary-compact" onclick="locationManager.loadLocations()">
                <i class="fas fa-search"></i>
                Search
            </button>
            <button type="button" class="btn-compact btn-secondary-compact" onclick="locationManager.clearFilters()">
                <i class="fas fa-times"></i>
                Clear
            </button>
        </div>
    </div>
</div>

<!-- Locations Table -->
<div class="data-table">
    <div class="table-header">
        <i class="fas fa-list"></i>
        <span>Warehouse Locations</span>
        <div class="ms-auto">
            <button type="button" class="btn-compact btn-secondary-compact" onclick="locationManager.refreshAllCapacities()">
                <i class="fas fa-sync-alt"></i>
                Refresh Capacities
            </button>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Current Stock</th>
                    <th>Max Capacity</th>
                    <th>Utilization</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="locationsTableBody">
                <tr>
                    <td colspan="8" class="text-center text-muted py-4">
                        <i class="fas fa-spinner fa-spin me-2"></i>
                        Loading locations...
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="pagination-compact">
        <div class="pagination-info">
            Showing <span id="showingFrom">0</span> to <span id="showingTo">0</span> of <span id="totalLocations">0</span> locations
        </div>
        <div class="d-flex gap-2">
            <select class="form-control-compact" id="pageSizeSelect" style="width: auto;">
                <option value="10">10 per page</option>
                <option value="25">25 per page</option>
                <option value="50">50 per page</option>
            </select>
            <div class="btn-group">
                <button type="button" class="btn-compact btn-secondary-compact" id="prevPageBtn" onclick="locationManager.previousPage()">
                    <i class="fas fa-chevron-left"></i>
                </button>
                <button type="button" class="btn-compact btn-secondary-compact" id="nextPageBtn" onclick="locationManager.nextPage()">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Create/Edit Location Modal -->
<div class="modal fade" id="locationModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="locationModalTitle">Add New Location</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="locationForm">
                    <input type="hidden" id="locationId" name="Id">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="locationCode" class="form-label">Location Code *</label>
                                <input type="text" class="form-control" id="locationCode" name="Code" required>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="locationName" class="form-label">Location Name *</label>
                                <input type="text" class="form-control" id="locationName" name="Name" required>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="locationType" class="form-label">Location Type *</label>
                                <select class="form-control" id="locationType" name="Type" required>
                                    <option value="">Select Type</option>
                                    <option value="Shelf">Shelf</option>
                                    <option value="Rack">Rack</option>
                                    <option value="Floor">Floor</option>
                                    <option value="Cold Storage">Cold Storage</option>
                                    <option value="Dangerous Goods">Dangerous Goods</option>
                                </select>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="maxCapacity" class="form-label">Max Capacity *</label>
                                <input type="number" class="form-control" id="maxCapacity" name="MaxCapacity" min="1" required>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="locationDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="locationDescription" name="Description" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="locationActive" name="IsActive" checked>
                            <label class="form-check-label" for="locationActive">
                                Active
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="locationManager.saveLocation()">Save Location</button>
            </div>
        </div>
    </div>
</div>

<!-- View Location Modal -->
<div class="modal fade" id="viewLocationModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Location Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="viewLocationContent">
                <!-- Content will be populated by JavaScript -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/location-manager.js"></script>
}