@model IEnumerable<WMS.Models.ViewModels.LocationStatusViewModel>
@{
    ViewData["Title"] = "Location Status";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h1 class="page-title">
                <i class="fas fa-map-marker-alt me-2"></i>
                Location Status
            </h1>
            <p class="page-subtitle">Monitor warehouse location capacity and inventory distribution</p>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Inventory
            </a>
        </div>
    </div>
</div>

<!-- Summary Statistics -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-map-marker-alt fa-2x"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="mb-0">@Model.Count()</h4>
                        <small>Total Locations</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="mb-0">@Model.Count(l => !l.IsFull && l.CurrentCapacity > 0)</h4>
                        <small>Available</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-exclamation-triangle fa-2x"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="mb-0">@Model.Count(l => l.AvailableCapacity <= 20 && l.AvailableCapacity > 5)</h4>
                        <small>Near Full (≤20)</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-times-circle fa-2x"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="mb-0">@Model.Count(l => l.IsFull || l.AvailableCapacity <= 5)</h4>
                        <small>Critical/Full</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label for="statusFilter" class="form-label">Status Filter</label>
                        <select class="form-select" id="statusFilter">
                            <option value="">All Locations</option>
                            <option value="empty">Empty</option>
                            <option value="available">Available</option>
                            <option value="near-full">Hampir Penuh (≤20)</option>
                            <option value="critical">Kritis (≤5)</option>
                            <option value="full">Penuh</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="capacityFilter" class="form-label">Capacity Range</label>
                        <select class="form-select" id="capacityFilter">
                            <option value="">All Capacities</option>
                            <option value="0-25">0-25%</option>
                            <option value="25-50">25-50%</option>
                            <option value="50-75">50-75%</option>
                            <option value="75-100">75-100%</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="searchLocation" class="form-label">Search Location</label>
                        <input type="text" class="form-control" id="searchLocation" placeholder="Search by code or name...">
                    </div>
                    <div class="col-md-3">
                        <div class="d-flex gap-2 mt-4">
                            <button type="button" class="btn btn-primary" onclick="applyFilters()">
                                <i class="fas fa-filter"></i> Apply Filters
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="clearFilters()">
                                <i class="fas fa-times"></i> Clear
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Location Grid -->
<div class="row">
    @foreach (var location in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4 location-card" 
             data-status="@(location.IsFull ? "full" : location.AvailableCapacity <= 5 ? "critical" : location.AvailableCapacity <= 20 ? "near-full" : location.CurrentCapacity > 0 ? "available" : "empty")"
             data-capacity="@location.CapacityPercentage"
             data-available="@location.AvailableCapacity"
             data-search="@(location.LocationCode + " " + location.LocationName).ToLower()">
            <div class="card h-100 @(location.IsFull ? "border-danger" : location.AvailableCapacity <= 5 ? "border-danger" : location.AvailableCapacity <= 20 ? "border-warning" : "border-success")">
                <div class="card-header @(location.IsFull ? "bg-danger text-white" : location.AvailableCapacity <= 5 ? "bg-danger text-white" : location.AvailableCapacity <= 20 ? "bg-warning text-dark" : "bg-success text-white")">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            @location.LocationCode
                        </h6>
                        <span class="badge @(location.IsFull ? "bg-light text-dark" : location.AvailableCapacity <= 5 ? "bg-light text-dark" : location.AvailableCapacity <= 20 ? "bg-dark" : "bg-light text-dark")">
                            @location.CapacityPercentage.ToString("F0")%
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <h6 class="card-title">@location.LocationName</h6>
                    
                    <!-- Enhanced Capacity Progress -->
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-2">
                            <small class="text-muted fw-bold">Current Quantity</small>
                            <small class="text-muted fw-bold">@location.CurrentCapacity / @location.MaxCapacity</small>
                        </div>
                        <div class="progress" style="height: 16px; border-radius: 8px;">
                            <div class="progress-bar @(location.IsFull ? "bg-danger" : location.AvailableCapacity <= 5 ? "bg-danger" : location.AvailableCapacity <= 20 ? "bg-warning" : "bg-success")" 
                                 role="progressbar" 
                                 style="width: @location.CapacityPercentage%; border-radius: 8px;"
                                 aria-valuenow="@location.CapacityPercentage" 
                                 aria-valuemin="0" 
                                 aria-valuemax="100">
                                <span class="progress-text fw-bold text-white">@location.CapacityPercentage.ToString("F0")%</span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between mt-2">
                            <small class="text-muted">
                                <i class="fas fa-boxes me-1"></i>Used: <strong>@location.CurrentCapacity</strong>
                            </small>
                            <small class="text-muted">
                                <i class="fas fa-warehouse me-1"></i>Available: <strong>@location.AvailableCapacity</strong>
                            </small>
                        </div>
                    </div>
                    
                    <!-- Detailed Status Information -->
                    <div class="row mb-3">
                        <div class="col-6">
                            <div class="text-center p-2 bg-light rounded">
                                <h6 class="text-primary mb-0">@location.ItemCount</h6>
                                <small class="text-muted">Item Types</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="text-center p-2 bg-light rounded">
                                <h6 class="text-info mb-0">@location.MaxCapacity</h6>
                                <small class="text-muted">Max Capacity</small>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Status Badge -->
                    <div class="text-center mb-3">
                        @if (location.IsFull)
                        {
                            <span class="badge bg-danger fs-6">
                                <i class="fas fa-times-circle me-1"></i>PENUH
                            </span>
                        }
                        else if (location.AvailableCapacity <= 5)
                        {
                            <span class="badge bg-danger fs-6">
                                <i class="fas fa-exclamation-triangle me-1"></i>KRITIS
                            </span>
                        }
                        else if (location.AvailableCapacity <= 20)
                        {
                            <span class="badge bg-warning fs-6">
                                <i class="fas fa-exclamation-triangle me-1"></i>HAMPIR PENUH
                            </span>
                        }
                        else if (location.CurrentCapacity > 0)
                        {
                            <span class="badge bg-success fs-6">
                                <i class="fas fa-check-circle me-1"></i>TERSEDIA
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary fs-6">
                                <i class="fas fa-circle me-1"></i>KOSONG
                            </span>
                        }
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-outline-primary btn-sm" 
                                onclick="viewLocationDetails(@location.LocationId)">
                            <i class="fas fa-eye me-2"></i>View Details
                        </button>
                        @if (!location.IsFull)
                        {
                            <button type="button" class="btn btn-outline-success btn-sm" 
                                    onclick="addInventoryToLocation(@location.LocationId)">
                                <i class="fas fa-plus me-2"></i>Add Inventory
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- No Results Message -->
<div id="noResults" class="text-center py-5" style="display: none;">
    <i class="fas fa-search fa-3x text-muted mb-3"></i>
    <h5 class="text-muted">No locations found</h5>
    <p class="text-muted">Try adjusting your filters to see more locations.</p>
    <button type="button" class="btn btn-primary" onclick="clearFilters()">
        <i class="fas fa-times"></i> Clear Filters
    </button>
</div>

<!-- Location Details Modal -->
<div class="modal fade" id="locationDetailsModal" tabindex="-1" aria-labelledby="locationDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="locationDetailsModalLabel">
                    <i class="fas fa-map-marker-alt me-2"></i>
                    Location Details
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="locationDetailsContent">
                    <!-- Content will be loaded here -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<style>
    .progress-text {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 0.75rem;
        font-weight: bold;
    }
    
    .progress {
        position: relative;
    }
    
    .location-card .card {
        transition: transform 0.2s ease-in-out;
    }
    
    .location-card:hover .card {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .badge.fs-6 {
        font-size: 0.875rem !important;
        padding: 0.5rem 0.75rem;
    }
</style>

<script>
    // Filter functions
    function applyFilters() {
        const statusFilter = document.getElementById('statusFilter').value;
        const capacityFilter = document.getElementById('capacityFilter').value;
        const searchTerm = document.getElementById('searchLocation').value.toLowerCase();
        
        const locationCards = document.querySelectorAll('.location-card');
        let visibleCount = 0;
        
        locationCards.forEach(card => {
            const status = card.dataset.status;
            const capacity = parseFloat(card.dataset.capacity);
            const search = card.dataset.search;
            
            let show = true;
            
            // Status filter
            if (statusFilter && status !== statusFilter) {
                show = false;
            }
            
            // Capacity filter
            if (capacityFilter) {
                const [min, max] = capacityFilter.split('-').map(Number);
                if (capacity < min || capacity > max) {
                    show = false;
                }
            }
            
            // Search filter
            if (searchTerm && !search.includes(searchTerm)) {
                show = false;
            }
            
            if (show) {
                card.style.display = 'block';
                visibleCount++;
            } else {
                card.style.display = 'none';
            }
        });
        
        // Show/hide no results message
        document.getElementById('noResults').style.display = visibleCount === 0 ? 'block' : 'none';
    }
    
    function clearFilters() {
        document.getElementById('statusFilter').value = '';
        document.getElementById('capacityFilter').value = '';
        document.getElementById('searchLocation').value = '';
        applyFilters();
    }
    
    // View location details
    function viewLocationDetails(locationId) {
        // This would typically make an AJAX call to get location details
        const location = @Html.Raw(Json.Serialize(Model.FirstOrDefault(l => l.LocationId == 1))); // Placeholder
        
        const content = `
            <div class="row">
                <div class="col-md-6">
                    <h6>Location Information</h6>
                    <p><strong>Code:</strong> ${location?.locationCode || 'N/A'}</p>
                    <p><strong>Name:</strong> ${location?.locationName || 'N/A'}</p>
                    <p><strong>Max Capacity:</strong> ${location?.maxCapacity || 0}</p>
                </div>
                <div class="col-md-6">
                    <h6>Current Status</h6>
                    <p><strong>Current Capacity:</strong> ${location?.currentCapacity || 0}</p>
                    <p><strong>Available:</strong> ${location?.availableCapacity || 0}</p>
                    <p><strong>Item Types:</strong> ${location?.itemCount || 0}</p>
                </div>
            </div>
            <hr>
            <h6>Items in this Location</h6>
            <p class="text-muted">Item details would be loaded here via AJAX</p>
        `;
        
        document.getElementById('locationDetailsContent').innerHTML = content;
        new bootstrap.Modal(document.getElementById('locationDetailsModal')).show();
    }
    
    // Add inventory to location
    function addInventoryToLocation(locationId) {
        // Redirect to create inventory with pre-selected location
        window.location.href = '@Url.Action("Create")' + '?locationId=' + locationId;
    }
    
    // Auto-apply filters on input change
    document.getElementById('searchLocation').addEventListener('input', applyFilters);
    document.getElementById('statusFilter').addEventListener('change', applyFilters);
    document.getElementById('capacityFilter').addEventListener('change', applyFilters);
    
    // Initialize filters
    applyFilters();
</script>