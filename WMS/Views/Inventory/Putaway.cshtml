@{
    ViewData["Title"] = "Putaway Operations";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h1 class="page-title">
                <i class="fas fa-truck-loading me-2"></i>
                Putaway Operations
            </h1>
            <p class="page-subtitle">Process incoming shipments and put items into warehouse locations</p>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Index", "Inventory")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Inventory
            </a>
        </div>
    </div>
</div>

<!-- Dashboard Statistics -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-truck fa-2x"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="mb-0" id="totalProcessedASNs">0</h4>
                        <small>ASNs Ready</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-boxes fa-2x"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="mb-0" id="totalPendingItems">0</h4>
                        <small>Items Pending</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-cubes fa-2x"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="mb-0" id="totalPendingQuantity">0</h4>
                        <small>Quantity Pending</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-calendar-day fa-2x"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="mb-0" id="todayPutawayCount">0</h4>
                        <small>Today's ASNs</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body py-3">
                <div class="row align-items-center">
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-filter"></i></span>
                            <select class="form-select" id="statusFilter">
                                <option value="">All Statuses</option>
                                <option value="Processed">Processed</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="showTodayOnly">
                            <label class="form-check-label" for="showTodayOnly">
                                Today Only
                            </label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" id="pageSizeSelect">
                            <option value="10">10 per page</option>
                            <option value="25">25 per page</option>
                            <option value="50">50 per page</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-outline-primary" id="refreshBtn">
                            <i class="fas fa-sync-alt"></i> Refresh
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Error Message -->
<div id="errorMessage" class="alert alert-danger d-none" role="alert">
    <!-- Error messages will be shown here -->
</div>

<!-- Success Message -->
<div id="successMessage" class="alert alert-success d-none" role="alert">
    <!-- Success messages will be shown here -->
</div>

<!-- ASN List -->
<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                <i class="fas fa-list me-2"></i>
                ASNs Ready for Putaway
            </h5>
            <a href="@Url.Action("Index", "Inventory")" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i>
                Back to Inventory
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        <div id="putawayTableContainer">
            <!-- Table will be rendered here by JavaScript -->
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2 text-muted">Loading ASNs...</p>
            </div>
        </div>

        <!-- Pagination -->
        <div class="row align-items-center mt-3 mx-3">
            <div class="col-md-6">
                <p class="mb-0 text-muted">
                    Showing <span id="showingStart">0</span> to <span id="showingEnd">0</span> of <span id="totalRecords">0</span> entries
                </p>
            </div>
            <div class="col-md-6">
                <nav aria-label="Putaway pagination">
                    <div class="d-flex justify-content-end align-items-center">
                        <span class="me-3 text-muted">
                            Page <span id="currentPageNum">1</span> of <span id="totalPagesNum">1</span>
                        </span>
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-primary btn-sm" id="prevPageBtn" onclick="previousPage()">
                                <i class="fas fa-chevron-left"></i> Previous
                            </button>
                            <button type="button" class="btn btn-outline-primary btn-sm" id="nextPageBtn" onclick="nextPage()">
                                Next <i class="fas fa-chevron-right"></i>
                            </button>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/putaway-manager.js"></script>
}