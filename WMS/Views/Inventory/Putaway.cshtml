@model WMS.Models.ViewModels.PutawayIndexViewModel
@{
    ViewData["Title"] = "Putaway Operations";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h1 class="page-title">
                <i class="fas fa-truck-loading me-2"></i>
                Putaway Operations
            </h1>
            <p class="page-subtitle">Process incoming shipments and put items into warehouse locations</p>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Inventory
            </a>
        </div>
    </div>
</div>

<!-- Summary Statistics -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-truck fa-2x"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="mb-0">@Model.Summary.TotalProcessedASNs</h4>
                        <small>ASNs Ready</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-boxes fa-2x"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="mb-0">@Model.Summary.TotalPendingItems</h4>
                        <small>Items Pending</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-cubes fa-2x"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="mb-0">@Model.Summary.TotalPendingQuantity</h4>
                        <small>Quantity Pending</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-calendar-day fa-2x"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="mb-0">@Model.Summary.TodayPutawayCount</h4>
                        <small>Today's ASNs</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Status Filter -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body py-3">
                <div class="d-flex align-items-center">
                    <label class="me-3 mb-0 fw-medium">Filter by Status:</label>
                    <div class="btn-group" role="group">
                        <a href="@Url.Action("Putaway")" class="btn @(string.IsNullOrEmpty(Model.StatusFilter) ? "btn-primary" : "btn-outline-primary") btn-sm">
                            All (@Model.ProcessedASNs.Count())
                        </a>
                        <a href="@Url.Action("Putaway", new { statusFilter = "Processed" })" class="btn @(Model.StatusFilter == "Processed" ? "btn-success" : "btn-outline-success") btn-sm">
                            Processed (@Model.ProcessedASNs.Count(a => a.Status == "Processed"))
                        </a>
                        <a href="@Url.Action("Putaway", new { statusFilter = "In Progress" })" class="btn @(Model.StatusFilter == "In Progress" ? "btn-warning" : "btn-outline-warning") btn-sm">
                            In Progress (@Model.ProcessedASNs.Count(a => a.Status == "In Progress"))
                        </a>
                        <a href="@Url.Action("Putaway", new { statusFilter = "Completed" })" class="btn @(Model.StatusFilter == "Completed" ? "btn-info" : "btn-outline-info") btn-sm">
                            Completed (@Model.ProcessedASNs.Count(a => a.Status == "Completed"))
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Priority Alert -->
@if (Model.Summary.OldestPendingASN != null && Model.Summary.DaysSinceOldest > 1)
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Priority Alert:</strong> ASN @Model.Summary.OldestPendingASN has been pending for @Model.Summary.DaysSinceOldest days. 
                Please process it as soon as possible.
            </div>
        </div>
    </div>
}

<!-- ASN List -->
<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                <i class="fas fa-list me-2"></i>
                ASNs Ready for Putaway
                @if (!string.IsNullOrEmpty(Model.StatusFilter))
                {
                    <span class="badge bg-primary ms-2">@Model.StatusFilter</span>
                }
            </h5>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i>
                Back to Inventory
            </a>
        </div>
    </div>
    <div class="card-body p-0">
                @if (Model.ProcessedASNs.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>ASN Number</th>
                                    <th>PO Number</th>
                                    <th>Supplier</th>
                                    <th>Arrival Date</th>
                                    <th>Items</th>
                                    <th>Quantity</th>
                                    <th>Progress</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var asn in Model.ProcessedASNs)
                                {
                                    <tr>
                                        <td>
                                            <div class="fw-medium text-primary">@asn.ASNNumber</div>
                                            @if (asn.IsCompleted)
                                            {
                                                <div class="small text-success">
                                                    <i class="fas fa-check-circle me-1"></i>
                                                    Completed
                                                </div>  
                                            }
                                        </td>
                                        <td>
                                            <div class="fw-medium">@asn.PONumber</div>
                                        </td>
                                        <td>
                                            <div class="fw-medium">@asn.SupplierName</div>
                                        </td>
                                        <td>
                                            @if (asn.ActualArrivalDate.HasValue)
                                            {
                                                <span class="fw-medium">@asn.ActualArrivalDate.Value.ToString("dd MMM yyyy")</span>
                                                <div class="small text-muted">@asn.ActualArrivalDate.Value.ToString("HH:mm")</div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not set</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="fw-medium">@asn.TotalItemTypes types</div>
                                            <div class="small text-muted">@asn.PendingPutawayCount pending</div>
                                        </td>
                                        <td>
                                            <div class="fw-medium">@asn.TotalQuantity.ToString("N0")</div>
                                        </td>
                                        <td>
                                            <div class="progress" style="height: 20px;">
                                                <div class="progress-bar @asn.CompletionCssClass" 
                                                     role="progressbar" 
                                                     style="width: @asn.CompletionPercentage%"
                                                     aria-valuenow="@asn.CompletionPercentage" 
                                                     aria-valuemin="0" 
                                                     aria-valuemax="100">
                                                    @asn.CompletionPercentage.ToString("F0")%
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="@asn.StatusCssClass">@asn.StatusIndonesia</span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("ProcessPutaway", new { asnId = asn.ASNId })"
                                                   class="btn btn-sm btn-outline-primary"
                                                   title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @if (asn.CanStartPutaway)
                                                {
                                                    <a href="@Url.Action("ProcessPutaway", new { asnId = asn.ASNId })"
                                                       class="btn btn-sm btn-outline-success"
                                                       title="Start Putaway">
                                                        <i class="fas fa-play"></i>
                                                    </a>
                                                }
                                                @if (asn.CanProcessAll && asn.ReadyForPutawayCount > 0)
                                                {
                                                    <button type="button" class="btn btn-sm btn-outline-warning"
                                                            onclick="bulkPutaway(@asn.ASNId)"
                                                            title="Bulk Process">
                                                        <i class="fas fa-bolt"></i>
                                                    </button>
                                                }
                                                @if (asn.IsCompleted)
                                                {
                                                    <a href="@Url.Action("Index", "ASN", new { id = asn.ASNId })"
                                                       class="btn btn-sm btn-outline-info"
                                                       title="View ASN">
                                                        <i class="fas fa-external-link-alt"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-truck fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No ASN Found</h5>
                        <p class="text-muted">
                            @if (!string.IsNullOrEmpty(Model.StatusFilter))
                            {
                                @:No ASN with status "@Model.StatusFilter" found.
                            }
                            else
                            {
                                @:All incoming shipments have been processed or no ASNs are in "Processed" status.
                            }
                        </p>
                        <a href="@Url.Action("Index", "ASN")" class="btn btn-primary">
                            <i class="fas fa-external-link-alt me-1"></i>
                            View ASNs
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    // Auto-refresh every 2 minutes for pending putaway updates
    setInterval(function() {
        if (!document.hidden && document.querySelector('[href*="statusFilter=Processed"]')?.classList.contains('btn-success')) {
            location.reload();
        }
    }, 120000);

    // Add tooltips for action buttons
    document.addEventListener('DOMContentLoaded', function() {
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });

    // Bulk putaway function
    function bulkPutaway(asnId) {
        if (confirm('Are you sure you want to process all ready items for this ASN in bulk?')) {
            // This would typically make an AJAX call to the BulkPutaway action
            window.location.href = '@Url.Action("ProcessPutaway")' + '?asnId=' + asnId + '&bulk=true';
        }
    }
</script>
