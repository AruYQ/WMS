@model WMS.Models.ViewModels.ItemViewModel
@{
    ViewData["Title"] = "Hapus Item";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">Hapus Item</h2>
                    <p class="text-muted mb-0">Konfirmasi penghapusan item</p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Kembali ke Daftar
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Warning Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Peringatan!</strong> Tindakan ini tidak dapat dibatalkan. Item yang dihapus akan hilang permanen dari sistem.
            </div>
        </div>
    </div>

    <!-- Item Information -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Informasi Item yang Akan Dihapus</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Item Code</label>
                                <p class="form-control-plaintext">@Model.ItemCode</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Nama Item</label>
                                <p class="form-control-plaintext">@Model.Name</p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Deskripsi</label>
                        <p class="form-control-plaintext">@(Model.Description ?? "Tidak ada deskripsi")</p>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Unit</label>
                                <p class="form-control-plaintext">
                                    <span class="badge bg-secondary">@Model.Unit</span>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Harga Standar</label>
                                <p class="form-control-plaintext">@Model.StandardPrice.ToString("C")</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Status</label>
                                <p class="form-control-plaintext">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Tidak Aktif</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Supplier</label>
                        <p class="form-control-plaintext">@Model.SupplierName</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Konfirmasi</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Delete" method="post">
                        <input asp-for="Id" type="hidden" />
                        
                        <div class="alert alert-warning">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Perhatian:</strong>
                            <ul class="mb-0 mt-2">
                                <li>Item akan dihapus permanen</li>
                                <li>Data terkait akan terpengaruh</li>
                                <li>Tindakan ini tidak dapat dibatalkan</li>
                            </ul>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Ya, Hapus Item
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Batal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>