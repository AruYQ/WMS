@model WMS.Models.ViewModels.ItemViewModel
@{
    ViewData["Title"] = "Tambah Item";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">Tambah Item</h2>
                    <p class="text-muted mb-0">Tambah item baru ke sistem</p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Kembali ke Daftar
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Section -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Informasi Item</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ItemCode" class="form-label"></label>
                                    <input asp-for="ItemCode" class="form-control" placeholder="Masukkan kode item" />
                                    <span asp-validation-for="ItemCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label"></label>
                                    <input asp-for="Name" class="form-control" placeholder="Masukkan nama item" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" 
                                      placeholder="Masukkan deskripsi item (opsional)"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Unit" class="form-label"></label>
                                    <input asp-for="Unit" class="form-control" placeholder="Contoh: PCS, KG, L" />
                                    <span asp-validation-for="Unit" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="StandardPrice" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">Rp</span>
                                        <input asp-for="StandardPrice" class="form-control" 
                                               placeholder="0" step="0.01" />
                                    </div>
                                    <span asp-validation-for="StandardPrice" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="SupplierId" class="form-label">Supplier <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <input type="text" id="supplierName" class="form-control" placeholder="Pilih Supplier" readonly required>
                                        <input type="hidden" id="supplierId" name="SupplierId" asp-for="SupplierId">
                                        <button type="button" class="btn btn-outline-secondary" onclick="openSupplierAdvancedSearch()" title="Advanced Search">
                                            <i class="fas fa-search"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-secondary" onclick="openSupplierDropdown()" title="Dropdown List">
                                            <i class="fas fa-chevron-down"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label">
                                    Item aktif (dapat digunakan dalam transaksi)
                                </label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Batal
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Simpan Item
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Informasi</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Tips:</strong>
                        <ul class="mb-0 mt-2">
                            <li>Item Code harus unik</li>
                            <li>Nama item harus jelas dan mudah dipahami</li>
                            <li>Unit harus konsisten (PCS, KG, L, dll)</li>
                            <li>Harga standar akan digunakan sebagai referensi</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Supplier Advanced Search Modal -->
<div class="modal fade" id="supplierAdvancedSearchModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="fas fa-search me-2"></i>
                    Advanced Search Supplier
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="supplierAdvancedSearchForm">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="searchName" class="form-label">Nama Supplier</label>
                                <input type="text" class="form-control" id="searchName" placeholder="Masukkan nama supplier">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="searchEmail" class="form-label">Email Supplier</label>
                                <input type="email" class="form-control" id="searchEmail" placeholder="Masukkan email supplier">
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="searchPhone" class="form-label">Phone Supplier</label>
                                <input type="tel" class="form-control" id="searchPhone" placeholder="Masukkan phone supplier">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="searchCity" class="form-label">City Supplier</label>
                                <input type="text" class="form-control" id="searchCity" placeholder="Masukkan city supplier">
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="searchContactPerson" class="form-label">Contact Person</label>
                                <input type="text" class="form-control" id="searchContactPerson" placeholder="Masukkan contact person">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="searchCreatedDateFrom" class="form-label">Tanggal Dibuat - Dari</label>
                                <input type="date" class="form-control" id="searchCreatedDateFrom">
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="searchCreatedDateTo" class="form-label">Tanggal Dibuat - Sampai</label>
                                <input type="date" class="form-control" id="searchCreatedDateTo">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3 d-flex align-items-end">
                                <button type="button" class="btn btn-primary me-2" onclick="searchSuppliersAdvanced()">
                                    <i class="fas fa-search me-1"></i>Search
                                </button>
                                <button type="button" class="btn btn-outline-secondary" onclick="clearAdvancedSearch()">
                                    <i class="fas fa-times me-1"></i>Clear
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
                
                <!-- Search Results -->
                <div id="supplierSearchResults" class="mt-3" style="display: none;">
                    <h6>Search Results:</h6>
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Nama</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>City</th>
                                    <th>Contact Person</th>
                                    <th>Created Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="supplierSearchResultsBody">
                                <!-- Dynamic content -->
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Pagination -->
                    <nav aria-label="Supplier search pagination" id="supplierSearchPagination">
                        <!-- Dynamic pagination -->
                    </nav>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Supplier Dropdown Modal -->
<div class="modal fade" id="supplierDropdownModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">
                    <i class="fas fa-list me-2"></i>
                    Pilih Supplier
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <input type="text" class="form-control" id="supplierDropdownSearch" placeholder="Cari supplier...">
                </div>
                <div id="supplierDropdownList">
                    <!-- Dynamic content -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/item-supplier-manager.js"></script>
}