@{
    ViewData["Title"] = "Item Management";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h1 class="page-title">
                <i class="fas fa-cube me-2"></i>
                Item Management
            </h1>
            <p class="page-subtitle">Manage your inventory items and product catalog</p>
        </div>
        <div class="col-auto">
            <button type="button" class="btn btn-primary" onclick="itemManager.showCreateModal()">
                <i class="fas fa-plus me-2"></i>Add New Item
            </button>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4" id="itemStatsContainer">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title mb-0" id="totalItemsCount">0</h4>
                        <p class="card-text">Total Items</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-cube fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title mb-0" id="activeItemsCount">0</h4>
                        <p class="card-text">Active Items</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title mb-0" id="inactiveItemsCount">0</h4>
                        <p class="card-text">Inactive Items</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-times-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title mb-0" id="totalSuppliersCount">0</h4>
                        <p class="card-text">Total Suppliers</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-truck fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form id="itemFilterForm">
            <div class="row">
                <div class="col-md-3">
                    <label class="form-label">Search Items</label>
                    <input type="text" class="form-control" id="searchInput" placeholder="Enter item code, name, or description">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Supplier</label>
                    <select class="form-select" id="supplierFilter">
                        <option value="">All Suppliers</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Status</label>
                    <select class="form-select" id="statusFilter">
                        <option value="">All Status</option>
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <div>
                        <button type="button" class="btn btn-primary w-100" onclick="itemManager.loadItems()">
                            <i class="fas fa-search"></i> Search
                        </button>
                    </div>
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <div>
                        <button type="button" class="btn btn-secondary w-100" onclick="itemManager.clearFilters()">
                            <i class="fas fa-times"></i> Clear
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Items Table -->
<div class="card">
    <div class="card-body">
        <div id="itemsTableContainer">
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
        
        <!-- Pagination Controls -->
        <div class="d-flex justify-content-between align-items-center mt-3">
            <div class="pagination-info">
                <span id="showingStart">0</span> - <span id="showingEnd">0</span> of <span id="totalRecords">0</span> items
            </div>
            <div class="pagination-controls">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-sm btn-outline-secondary" id="prevPageBtn" onclick="itemManager.previousPage()" disabled>
                        <i class="fas fa-chevron-left"></i> Previous
                    </button>
                    <span class="btn btn-sm btn-outline-secondary disabled" id="pageInfo">
                        Page <span id="currentPageNum">1</span> of <span id="totalPagesNum">1</span>
                    </span>
                    <button type="button" class="btn btn-sm btn-outline-secondary" id="nextPageBtn" onclick="itemManager.nextPage()" disabled>
                        Next <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
                <div class="ms-3">
                    <select class="form-select form-select-sm" id="pageSizeSelect" onchange="itemManager.changePageSize(this.value)">
                        <option value="10">10 per page</option>
                        <option value="25">25 per page</option>
                        <option value="50">50 per page</option>
                        <option value="100">100 per page</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create/Edit Item Modal -->
<div class="modal fade" id="itemModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="itemModalTitle">Add New Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="itemForm">
                <div class="modal-body">
                    <input type="hidden" id="itemId" name="Id">
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="itemCode" class="form-label">Item Code *</label>
                                <input type="text" class="form-control" id="itemCode" name="ItemCode" required>
                                <div class="invalid-feedback"></div>
                                <small class="form-text text-muted">
                                    <i class="fas fa-info-circle"></i> Kode unik identifikasi (SKU). Format: Alphanumeric, tanpa spasi. Maks 50 karakter. <strong>Contoh:</strong> TEL-001, KNT-2024
                                </small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="itemName" class="form-label">Item Name *</label>
                                <input type="text" class="form-control" id="itemName" name="Name" required>
                                <div class="invalid-feedback"></div>
                                <small class="form-text text-muted">
                                    <i class="fas fa-info-circle"></i> Nama lengkap yang jelas dan deskriptif. Gunakan nama mudah dipahami. Maks 100 karakter. <strong>Contoh:</strong> Telur Ayam Ras Grade A
                                </small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="itemUnit" class="form-label">Unit *</label>
                                <input type="text" class="form-control" id="itemUnit" name="Unit" required>
                                <div class="invalid-feedback"></div>
                                <small class="form-text text-muted">
                                    <i class="fas fa-info-circle"></i> Satuan pengukuran item. Maks 20 karakter. <strong>Contoh:</strong> pcs, kg, liter, box, pack
                                </small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="purchasePrice" class="form-label">Purchase Price *</label>
                                <input type="number" class="form-control" id="purchasePrice" name="PurchasePrice" step="0.01" min="0" required>
                                <div class="invalid-feedback"></div>
                                <small class="form-text text-muted">
                                    <i class="fas fa-info-circle"></i> Harga beli dari supplier (cost price). Format: Angka desimal. Untuk perhitungan profit margin. <strong>Contoh:</strong> 5000.00
                                </small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="standardPrice" class="form-label">Standard Price *</label>
                                <input type="number" class="form-control" id="standardPrice" name="StandardPrice" step="0.01" min="0" required>
                                <div class="invalid-feedback"></div>
                                <small class="form-text text-muted">
                                    <i class="fas fa-info-circle"></i> Harga jual ke customer (selling price). Format: Angka desimal. Biasanya lebih tinggi dari Purchase Price. <strong>Contoh:</strong> 7500.00
                                </small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label for="itemDescription" class="form-label">Description</label>
                                <textarea class="form-control" id="itemDescription" name="Description" rows="3"></textarea>
                                <div class="invalid-feedback"></div>
                                <small class="form-text text-muted">
                                    <i class="fas fa-info-circle"></i> Deskripsi detail item (opsional). Bisa berisi spesifikasi, catatan, atau informasi tambahan. Maks 500 karakter.
                                </small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label for="supplierId" class="form-label">Supplier *</label>
                                <div class="input-group">
                                    <select class="form-select" id="supplierId" name="SupplierId" required>
                                        <option value="">Select Supplier</option>
                                    </select>
                                    <button type="button" class="btn btn-outline-info" onclick="openSupplierAdvancedSearch()">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                                <div class="invalid-feedback"></div>
                                <small class="form-text text-muted">
                                    <i class="fas fa-info-circle"></i> Pilih supplier yang menyediakan item ini. Wajib dipilih sebelum menyimpan. Gunakan tombol search untuk mencari.
                                </small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="isActive" name="IsActive" checked>
                                    <label class="form-check-label" for="isActive">
                                        Active
                                    </label>
                                </div>
                                <small class="form-text text-muted">
                                    <i class="fas fa-info-circle"></i> Centang jika item aktif digunakan. Item non-aktif tidak akan muncul di transaksi baru.
                                </small>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Error Message -->
                    <div id="errorMessage" class="alert alert-danger" style="display: none;" role="alert">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Item</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- View Item Modal -->
<div class="modal fade" id="viewItemModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Item Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="itemDetailsContainer">
                <!-- Loaded via AJAX -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Supplier Advanced Search Modal -->
<div class="modal fade" id="supplierAdvancedSearchModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Advanced Supplier Search</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="supplierAdvancedSearchForm">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="searchName" class="form-label">Supplier Name</label>
                                <input type="text" class="form-control" id="searchName" placeholder="Enter supplier name">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="searchEmail" class="form-label">Email</label>
                                <input type="email" class="form-control" id="searchEmail" placeholder="Enter email">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="searchPhone" class="form-label">Phone</label>
                                <input type="text" class="form-control" id="searchPhone" placeholder="Enter phone">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="searchCity" class="form-label">City</label>
                                <input type="text" class="form-control" id="searchCity" placeholder="Enter city">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="searchContactPerson" class="form-label">Contact Person</label>
                                <input type="text" class="form-control" id="searchContactPerson" placeholder="Enter contact person">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="searchCreatedDateFrom" class="form-label">Created Date From</label>
                                <input type="date" class="form-control" id="searchCreatedDateFrom">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="searchCreatedDateTo" class="form-label">Created Date To</label>
                                <input type="date" class="form-control" id="searchCreatedDateTo">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">&nbsp;</label>
                                <div>
                                    <button type="button" class="btn btn-primary w-100" onclick="searchSuppliersAdvanced()">
                                        <i class="fas fa-search"></i> Search
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                
                <div id="supplierSearchResults" class="mt-4" style="display: none;">
                    <h6 class="mb-3">Search Results</h6>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Supplier Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>City</th>
                                    <th>Contact Person</th>
                                    <th>Created Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="supplierSearchResultsBody">
                                <!-- Search results will be loaded here -->
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Pagination -->
                    <nav id="supplierSearchPagination" class="mt-3">
                        <ul class="pagination justify-content-center">
                            <!-- Pagination will be loaded here -->
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-outline-secondary" onclick="clearAdvancedSearch()">Clear</button>
            </div>
        </div>
    </div>
</div>

<!-- Supplier Dropdown Modal -->
<div class="modal fade" id="supplierDropdownModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Select Supplier</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="supplierDropdownList">
                    <!-- Supplier list will be loaded here -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Help Text Styling */
        .form-text {
            display: block;
            margin-top: 0.35rem;
            font-size: 0.8rem;
            line-height: 1.4;
        }

        .form-text i {
            color: #0d6efd;
            margin-right: 0.25rem;
        }

        .form-text strong {
            color: #0d6efd;
            font-weight: 600;
        }
    </style>
}

@section Scripts {
    <script src="~/js/item-manager.js"></script>
    <script src="~/js/item-supplier-manager.js"></script>
    
    <script>
        let itemManager;
        let itemSupplierManager;
        document.addEventListener('DOMContentLoaded', function() {
            itemManager = new ItemManager();
            itemSupplierManager = new ItemSupplierManager();
            window.itemSupplierManager = itemSupplierManager;
        });

        // Global functions untuk supplier selection
        function openSupplierAdvancedSearch() {
            window.itemSupplierManager.openSupplierAdvancedSearch();
        }
        
        function searchSuppliersAdvanced() {
            window.itemSupplierManager.searchSuppliersAdvanced();
        }
        
        function clearAdvancedSearch() {
            window.itemSupplierManager.clearAdvancedSearch();
        }
    </script>
}