@model WMS.Models.ViewModels.ItemIndexViewModel
@{
    ViewData["Title"] = "Data Item";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">Data Item</h2>
                    <p class="text-muted mb-0">Kelola data item dan produk</p>
                </div>
                <div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Tambah Item
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.Summary.TotalItems</h4>
                            <p class="mb-0">Total Item</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-boxes fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.Summary.ActiveItems</h4>
                            <p class="mb-0">Item Aktif</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.Summary.InactiveItems</h4>
                            <p class="mb-0">Item Tidak Aktif</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-pause-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.Summary.TotalValue.ToString("C")</h4>
                            <p class="mb-0">Total Nilai</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-dollar-sign fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="searchTerm" class="form-label">Cari Item</label>
                    <input type="text" class="form-control" id="searchTerm" name="searchTerm" 
                           value="@Model.SearchTerm" placeholder="Cari berdasarkan nama atau kode item...">
                </div>
                <div class="col-md-3">
                    <label for="supplierId" class="form-label">Supplier</label>
                    <select class="form-select" id="supplierId" name="supplierId">
                        <option value="">Semua Supplier</option>
                        @if (Model.SupplierOptions != null)
                        {
                            @foreach (var supplier in Model.SupplierOptions)
                            {
                                <option value="@supplier.Value" selected="@(supplier.Selected)">@supplier.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="isActive" class="form-label">Status</label>
                    <select class="form-select" id="isActive" name="isActive">
                        <option value="">Semua Status</option>
                        <option value="true" selected="@(Model.IsActive == true)">Aktif</option>
                        <option value="false" selected="@(Model.IsActive == false)">Tidak Aktif</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search me-2"></i>Cari
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Items Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Daftar Item</h5>
        </div>
        <div class="card-body">
            @if (Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Item Code</th>
                                <th>Nama Item</th>
                                <th>Supplier</th>
                                <th>Unit</th>
                                <th>Harga Standar</th>
                                <th>Status</th>
                                <th class="text-center">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <span class="fw-bold text-primary">@item.ItemCode</span>
                                    </td>
                                    <td>
                                        <div>
                                            <div class="fw-bold">@item.Name</div>
                                            @if (!string.IsNullOrEmpty(item.Description))
                                            {
                                                <small class="text-muted">@item.Description</small>
                                            }
                                        </div>
                                    </td>
                                    <td>@item.SupplierName</td>
                                    <td>
                                        <span class="badge bg-secondary">@item.Unit</span>
                                    </td>
                                    <td>@item.StandardPrice.ToString("C")</td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Tidak Aktif</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-outline-info" title="Lihat Detail">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-outline-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-outline-danger" title="Hapus">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-boxes fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Tidak ada item ditemukan</h5>
                    <p class="text-muted">Coba ubah kriteria pencarian atau tambah item baru</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Tambah Item Pertama
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-submit form on Enter key
        document.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.target.closest('form').submit();
            }
        });
    </script>
}