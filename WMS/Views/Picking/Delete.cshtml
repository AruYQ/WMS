@model WMS.Models.ViewModels.PickingViewModel

@{
    ViewData["Title"] = "Delete Picking";
}

<div class="content-wrapper">
    <!-- Page Header -->
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="page-title">
                    <i class="fas fa-trash text-danger"></i>
                    Delete Picking
                </h1>
                <p class="page-subtitle">Confirm deletion of picking document</p>
            </div>
            <div>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Confirm Deletion
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning:</strong> Are you sure you want to delete this picking document?
                        This action cannot be undone.
                    </div>

                    <h5 class="mb-3">Picking Document Information:</h5>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-1">Picking Number</h6>
                            <p class="mb-0"><strong class="text-primary">@Model.PickingNumber</strong></p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted mb-1">Status</h6>
                            <p class="mb-0">
                                <span class="badge @(Model.Status == "Pending" ? "bg-secondary" : Model.Status == "InProgress" ? "bg-warning" : "bg-success")">
                                    @Model.StatusIndonesia
                                </span>
                            </p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-1">Sales Order</h6>
                            <p class="mb-0">@Model.SONumber</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted mb-1">Customer</h6>
                            <p class="mb-0">@Model.CustomerName</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-1">Picking Date</h6>
                            <p class="mb-0">@Model.PickingDate.ToString("dd MMMM yyyy")</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted mb-1">Total Items</h6>
                            <p class="mb-0">@Model.TotalItemTypes items</p>
                        </div>
                    </div>

                    <hr>

                    <!-- Summary -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="text-center p-3 bg-light rounded">
                                <h6 class="text-muted mb-1">Total Required</h6>
                                <h4 class="mb-0">@Model.TotalQuantityRequired</h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center p-3 bg-light rounded">
                                <h6 class="text-muted mb-1">Total Picked</h6>
                                <h4 class="mb-0 @(Model.TotalQuantityPicked > 0 ? "text-warning" : "text-muted")">
                                    @Model.TotalQuantityPicked
                                </h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center p-3 bg-light rounded">
                                <h6 class="text-muted mb-1">Completion</h6>
                                <h4 class="mb-0 @(Model.CompletionPercentage > 0 ? "text-info" : "text-muted")">
                                    @Model.CompletionPercentage.ToString("F1")%
                                </h4>
                            </div>
                        </div>
                    </div>

                    @if (Model.TotalQuantityPicked > 0)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <strong>Note:</strong> This picking has @Model.TotalQuantityPicked units already picked.
                            Deleting will <strong>NOT</strong> restore the inventory. Use "Cancel" instead to restore inventory.
                        </div>
                    }

                    @if (Model.Status == "Completed")
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-ban me-2"></i>
                            <strong>Cannot Delete:</strong> Completed picking documents cannot be deleted.
                        </div>
                    }
                </div>
                <div class="card-footer bg-white border-top">
                    <div class="d-flex justify-content-end gap-2">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                        @if (Model.Status != "Completed")
                        {
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@Model.Id" />
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this picking document?');">
                                    <i class="fas fa-trash"></i> Delete Picking
                                </button>
                            </form>
                        }
                        else
                        {
                            <button type="button" class="btn btn-danger" disabled>
                                <i class="fas fa-trash"></i> Cannot Delete
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
