@{
    ViewData["Title"] = "Picking";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h1 class="page-title">
                <i class="fas fa-boxes me-2"></i>
                Picking
            </h1>
            <p class="page-subtitle">Process picking orders - move items from source to holding location</p>
        </div>
        <div class="col-auto">
            <button type="button" class="btn btn-outline-secondary" onclick="pickingManager.loadPickings()">
                <i class="fas fa-sync-alt me-1"></i>Refresh
            </button>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body py-3">
                <div class="row align-items-center">
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                            <input type="text" class="form-control" id="searchInput" placeholder="Search picking numbers, SO numbers, customers...">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" id="statusFilter">
                            <option value="">All Statuses</option>
                            <option value="Pending">Pending</option>
                            <option value="In Progress">In Progress</option>
                            <option value="Completed">Completed</option>
                            <option value="Cancelled">Cancelled</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select class="form-select" id="pageSizeSelect">
                            <option value="10">10 per page</option>
                            <option value="25">25 per page</option>
                            <option value="50">50 per page</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Pickings Table -->
<div class="card">
    <div class="card-body">
        <div id="pickingsTableContainer">
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2 text-muted">Loading Pickings...</p>
            </div>
        </div>

        <!-- Pagination -->
        <div class="row align-items-center mt-3">
            <div class="col-md-6">
                <p class="mb-0 text-muted">
                    Showing <span id="showingStart">0</span> to <span id="showingEnd">0</span> of <span id="totalRecords">0</span> entries
                </p>
            </div>
            <div class="col-md-6">
                <nav aria-label="Picking pagination">
                    <div class="d-flex justify-content-end align-items-center">
                        <span class="me-3 text-muted">
                            Page <span id="currentPageNum">1</span> of <span id="totalPagesNum">1</span>
                        </span>
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-primary btn-sm" id="prevPageBtn" onclick="pickingManager.previousPage()">
                                <i class="fas fa-chevron-left"></i> Previous
                            </button>
                            <button type="button" class="btn btn-outline-primary btn-sm" id="nextPageBtn" onclick="pickingManager.nextPage()">
                                Next <i class="fas fa-chevron-right"></i>
                            </button>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Process Picking Modal -->
<div class="modal fade" id="processPickingModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="processPickingModalTitle">Process Picking</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            
            <div id="processPickingErrorMessage" class="alert alert-danger d-none mx-3 mt-3"></div>
            <div id="processPickingSuccessMessage" class="alert alert-success d-none mx-3 mt-3"></div>
            
            <form id="processPickingForm">
                <div class="modal-body">
                    <!-- Picking Info -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-info-circle me-2"></i>
                                Picking Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <label class="form-label fw-bold">Picking Number:</label>
                                    <p id="processPickingNumber" class="form-control-plaintext"></p>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label fw-bold">Sales Order:</label>
                                    <p id="processSONumber" class="form-control-plaintext"></p>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label fw-bold">Customer:</label>
                                    <p id="processCustomerName" class="form-control-plaintext"></p>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label fw-bold">Holding Location:</label>
                                    <p id="processHoldingLocation" class="form-control-plaintext"></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Items to Pick Section -->
                    <div class="card mb-3">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-boxes me-2"></i>
                                Items to Pick (<span id="itemsToPickCount">0</span>)
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Item</th>
                                            <th class="text-center">Source Location</th>
                                            <th class="text-center">Required</th>
                                            <th class="text-center">Picked</th>
                                            <th class="text-center">Remaining</th>
                                            <th class="text-center">Qty to Pick</th>
                                            <th class="text-center">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody id="processPickingDetailsBody">
                                        <!-- Items to pick will be populated here -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Completed Items Section -->
                    <div class="card">
                        <div class="card-header bg-success bg-opacity-10">
                            <h5 class="card-title mb-0 text-success">
                                <i class="fas fa-check-circle me-2"></i>
                                Completed Items (<span id="completedItemsCount">0</span>)
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-success">
                                        <tr>
                                            <th>Item</th>
                                            <th class="text-center">Required</th>
                                            <th class="text-center">Picked</th>
                                            <th class="text-center">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody id="processCompletedItemsBody">
                                        <!-- Completed items will be populated here -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="saveProcessPickingBtn">
                        <i class="fas fa-save me-2"></i>
                        <span class="btn-text">Process Picking</span>
                        <div class="spinner-border spinner-border-sm d-none" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/picking-manager.js"></script>
}

