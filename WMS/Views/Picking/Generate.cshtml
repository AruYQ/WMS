@model dynamic

@{
    ViewData["Title"] = "Generate Picking";
    var availableSalesOrders = ViewBag.AvailableSalesOrders as List<WMS.Models.SalesOrder>;
}

<div class="content-wrapper">
    <!-- Page Header -->
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="page-title">
                    <i class="fas fa-plus-circle text-success"></i>
                    Generate Picking
                </h1>
                <p class="page-subtitle">Select a confirmed Sales Order to generate picking list</p>
            </div>
            <div>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Back to Picking List
                </a>
            </div>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Available Sales Orders -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
            <h5 class="mb-0">
                <i class="fas fa-shopping-cart me-2 text-primary"></i>
                Available Sales Orders for Picking
            </h5>
        </div>
        <div class="card-body">
            @if (availableSalesOrders != null && availableSalesOrders.Any())
            {
                <div class="row">
                    @foreach (var salesOrder in availableSalesOrders)
                    {
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="card h-100 border-start border-4 border-success">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h6 class="card-title text-primary mb-0">@salesOrder.SONumber</h6>
                                        <span class="badge bg-success">Confirmed</span>
                                    </div>
                                    
                                    <p class="text-muted small mb-2">
                                        <i class="fas fa-user me-1"></i>
                                        @salesOrder.Customer?.Name
                                    </p>
                                    
                                    <p class="text-muted small mb-2">
                                        <i class="fas fa-calendar me-1"></i>
                                        @salesOrder.OrderDate.ToString("MMM dd, yyyy")
                                    </p>
                                    
                                    <p class="text-muted small mb-3">
                                        <i class="fas fa-boxes me-1"></i>
                                        @salesOrder.SalesOrderDetails.Count items
                                    </p>
                                    
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="fw-bold text-success">
                                            @salesOrder.TotalAmount.ToString("C0")
                                        </span>
                                        <a href="@Url.Action("GenerateFromSalesOrder", new { salesOrderId = salesOrder.Id })" 
                                           class="btn btn-success btn-sm">
                                            <i class="fas fa-plus me-1"></i>
                                            Generate Picking
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No Available Sales Orders</h5>
                    <p class="text-muted">
                        There are no confirmed Sales Orders available for picking at the moment.
                    </p>
                    <a href="@Url.Action("Index", "SalesOrder")" class="btn btn-outline-primary">
                        <i class="fas fa-external-link-alt me-1"></i>
                        View Sales Orders
                    </a>
                </div>
            }
        </div>
    </div>
</div>
