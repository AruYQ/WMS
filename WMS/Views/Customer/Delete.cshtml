@model WMS.Models.ViewModels.CustomerViewModel
@{
    ViewData["Title"] = "Hapus Customer";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">Hapus Customer</h2>
                    <p class="text-muted mb-0">Konfirmasi penghapusan customer</p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Kembali ke Daftar
                    </a>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                        <i class="fas fa-eye me-2"></i>Lihat Detail
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Warning Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Peringatan!</strong> Anda akan menghapus customer ini secara permanen. Tindakan ini tidak dapat dibatalkan.
            </div>
        </div>
    </div>

    <!-- Customer Information -->
    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Informasi Customer yang Akan Dihapus</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Nama Customer</label>
                            <p class="form-control-plaintext">@Model.Name</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <p class="form-control-plaintext">
                                <a href="mailto:@Model.Email" class="text-decoration-none">
                                    <i class="fas fa-envelope me-1"></i>@Model.Email
                                </a>
                            </p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Nomor Telepon</label>
                            <p class="form-control-plaintext">
                                @if (!string.IsNullOrEmpty(Model.Phone))
                                {
                                    <a href="tel:@Model.Phone" class="text-decoration-none">
                                        <i class="fas fa-phone me-1"></i>@Model.Phone
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Status</label>
                            <p class="form-control-plaintext">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Tidak Aktif</span>
                                }
                            </p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 mb-3">
                            <label class="form-label fw-bold">Alamat</label>
                            <p class="form-control-plaintext">
                                @if (!string.IsNullOrEmpty(Model.Address))
                                {
                                    @Model.Address
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </p>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Dibuat Oleh</label>
                            <p class="form-control-plaintext">@Model.CreatedBy</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Tanggal Dibuat</label>
                            <p class="form-control-plaintext">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>

                    @if (Model.ModifiedDate.HasValue)
                    {
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Diubah Oleh</label>
                                <p class="form-control-plaintext">@Model.ModifiedBy</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Tanggal Diubah</label>
                                <p class="form-control-plaintext">@Model.ModifiedDate.Value.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Peringatan</h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Hati-hati!</strong>
                        <ul class="mb-0 mt-2">
                            <li>Data customer akan dihapus permanen</li>
                            <li>Tindakan ini tidak dapat dibatalkan</li>
                            <li>Pastikan tidak ada Sales Order yang terkait</li>
                        </ul>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Alternatif:</strong>
                        <ul class="mb-0 mt-2">
                            <li>Nonaktifkan customer alih-alih menghapus</li>
                            <li>Edit status menjadi "Tidak Aktif"</li>
                            <li>Data akan tetap tersimpan untuk audit</li>
                        </ul>
                    </div>

                    <div class="text-center">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit me-1"></i>Edit Alih-alih Hapus
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Confirmation Section -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="Delete" method="post">
                        <input asp-for="Id" type="hidden" />
                        
                        <div class="text-center">
                            <h5 class="text-danger mb-3">Apakah Anda yakin ingin menghapus customer ini?</h5>
                            <p class="text-muted mb-4">
                                Customer <strong>@Model.Name</strong> akan dihapus secara permanen dari sistem.
                            </p>
                            
                            <div class="d-flex justify-content-center gap-3">
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                    <i class="fas fa-times me-1"></i>Batal
                                </a>
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Apakah Anda yakin? Tindakan ini tidak dapat dibatalkan!')">
                                    <i class="fas fa-trash me-1"></i>Ya, Hapus Customer
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Additional confirmation for delete button
            $('button[type="submit"]').on('click', function(e) {
                if (!confirm('Apakah Anda benar-benar yakin ingin menghapus customer ini? Tindakan ini tidak dapat dibatalkan!')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}
