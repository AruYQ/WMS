@model WMS.Models.ViewModels.CustomerViewModel
@{
    ViewData["Title"] = "Detail Customer";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">Detail Customer</h2>
                    <p class="text-muted mb-0">Informasi lengkap customer</p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Kembali ke Daftar
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>Edit Customer
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Customer Information -->
    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Informasi Customer</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Nama Customer</label>
                            <p class="form-control-plaintext">@Model.Name</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <p class="form-control-plaintext">
                                <a href="mailto:@Model.Email" class="text-decoration-none">
                                    <i class="fas fa-envelope me-1"></i>@Model.Email
                                </a>
                            </p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Nomor Telepon</label>
                            <p class="form-control-plaintext">
                                @if (!string.IsNullOrEmpty(Model.Phone))
                                {
                                    <a href="tel:@Model.Phone" class="text-decoration-none">
                                        <i class="fas fa-phone me-1"></i>@Model.Phone
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Status</label>
                            <p class="form-control-plaintext">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Tidak Aktif</span>
                                }
                            </p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 mb-3">
                            <label class="form-label fw-bold">Alamat</label>
                            <p class="form-control-plaintext">
                                @if (!string.IsNullOrEmpty(Model.Address))
                                {
                                    @Model.Address
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </p>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Dibuat Oleh</label>
                            <p class="form-control-plaintext">@Model.CreatedBy</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Tanggal Dibuat</label>
                            <p class="form-control-plaintext">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>

                    @if (Model.ModifiedDate.HasValue)
                    {
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Diubah Oleh</label>
                                <p class="form-control-plaintext">@Model.ModifiedBy</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Tanggal Diubah</label>
                                <p class="form-control-plaintext">@Model.ModifiedDate.Value.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Statistik</h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-12 mb-3">
                            <h4 class="text-primary">@Model.SalesOrderCount</h4>
                            <small class="text-muted">Sales Order</small>
                        </div>
                    </div>
                    <hr>
                    <div class="text-center">
                        <h4 class="text-success">@Model.TotalOrderValue.ToString("C")</h4>
                        <small class="text-muted">Total Order Value</small>
                    </div>
                    @if (Model.LastOrderDate.HasValue)
                    {
                        <hr>
                        <div class="text-center">
                            <h6 class="text-warning">@Model.LastOrderDate.Value.ToString("dd/MM/yyyy")</h6>
                            <small class="text-muted">Terakhir Order</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Sales Orders Section -->
    @if (Model.SalesOrders.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Sales Orders</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Nomor SO</th>
                                        <th>Tanggal Order</th>
                                        <th>Tanggal Dibutuhkan</th>
                                        <th>Status</th>
                                        <th>Total Amount</th>
                                        <th>Warehouse Fee</th>
                                        <th>Grand Total</th>
                                        <th>Qty</th>
                                        <th>Items</th>
                                        <th>Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var so in Model.SalesOrders)
                                    {
                                        <tr>
                                            <td>@so.SONumber</td>
                                            <td>@so.OrderDateDisplay</td>
                                            <td>@so.RequiredDateDisplay</td>
                                            <td>
                                                <span class="@so.StatusCssClass">@so.StatusIndonesia</span>
                                            </td>
                                            <td>@so.TotalAmountDisplay</td>
                                            <td>@so.TotalWarehouseFeeDisplay</td>
                                            <td>
                                                <span class="fw-bold text-success">@so.GrandTotalDisplay</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@so.TotalQuantity</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">@so.TotalItemTypes</span>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", "SalesOrder", new { id = so.Id })" 
                                                   class="btn btn-sm btn-outline-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Belum ada Sales Order</h5>
                        <p class="text-muted">Customer ini belum memiliki sales order.</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
