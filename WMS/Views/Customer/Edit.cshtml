@model WMS.Models.Customer
@{
    ViewData["Title"] = "Edit Customer";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">Edit Customer</h2>
                    <p class="text-muted mb-0">Ubah informasi customer</p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Kembali ke Daftar
                    </a>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                        <i class="fas fa-eye me-2"></i>Lihat Detail
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Section -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Informasi Customer</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="CompanyId" type="hidden" />
                        <input asp-for="CreatedDate" type="hidden" />
                        <input asp-for="CreatedBy" type="hidden" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="Masukkan nama customer" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="customer@example.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <div class="form-text">Email akan digunakan untuk komunikasi dan invoice</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label"></label>
                                <input asp-for="Phone" type="tel" class="form-control" placeholder="+62 812 3456 7890" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="IsActive" class="form-label"></label>
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsActive" class="form-check-label">
                                        Customer aktif
                                    </label>
                                </div>
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label asp-for="Address" class="form-label"></label>
                                <textarea asp-for="Address" class="form-control" rows="3" placeholder="Masukkan alamat lengkap customer"></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                                <div class="form-text">Alamat akan digunakan untuk pengiriman barang</div>
                            </div>
                        </div>

                        <hr>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Dibuat Oleh</label>
                                <p class="form-control-plaintext">@Model.CreatedBy</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Tanggal Dibuat</label>
                                <p class="form-control-plaintext">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                        <i class="fas fa-times me-1"></i>Batal
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-1"></i>Update Customer
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Informasi</h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Tips:</strong>
                        <ul class="mb-0 mt-2">
                            <li>Pastikan email customer valid dan aktif</li>
                            <li>Alamat lengkap diperlukan untuk pengiriman</li>
                            <li>Customer dapat diaktifkan/nonaktifkan</li>
                            <li>Email harus unik dalam perusahaan Anda</li>
                        </ul>
                    </div>

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Perhatian:</strong>
                        <ul class="mb-0 mt-2">
                            <li>Perubahan akan tercatat dalam audit trail</li>
                            <li>Customer yang tidak aktif tidak akan muncul di Sales Order</li>
                        </ul>
                    </div>

                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i>
                        <strong>Status:</strong>
                        <ul class="mb-0 mt-2">
                            <li>ID: @Model.Id</li>
                            <li>Company ID: @Model.CompanyId</li>
                            <li>Terakhir diubah: @(Model.ModifiedDate?.ToString("dd/MM/yyyy HH:mm") ?? "Belum pernah diubah")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Email validation with AJAX
            $('#Email').on('blur', function() {
                var email = $(this).val();
                var customerId = @Model.Id; // Current customer ID for edit

                if (email && email.length > 0) {
                    $.get('@Url.Action("CheckEmail", "Customer")', { email: email, excludeId: customerId })
                        .done(function(data) {
                            if (!data.isUnique) {
                                $('#Email').addClass('is-invalid');
                                if (!$('#email-error').length) {
                                    $('#Email').after('<div id="email-error" class="invalid-feedback">' + data.message + '</div>');
                                }
                            } else {
                                $('#Email').removeClass('is-invalid');
                                $('#email-error').remove();
                            }
                        });
                }
            });

            // Phone number formatting
            $('#Phone').on('input', function() {
                var value = $(this).val().replace(/\D/g, '');
                if (value.length > 0) {
                    if (value.startsWith('62')) {
                        value = '+' + value;
                    } else if (value.startsWith('0')) {
                        value = '+62' + value.substring(1);
                    } else if (!value.startsWith('+')) {
                        value = '+62' + value;
                    }
                }
                $(this).val(value);
            });
        });
    </script>
}
