@{
    ViewData["Title"] = "Customer Management";
}

<!-- Statistics Dashboard -->
<div class="stats-grid">
    <div class="stats-card">
        <div class="stats-icon">
            <i class="fas fa-users"></i>
        </div>
        <div class="stats-number" id="totalCustomersCount">-</div>
        <div class="stats-label">Total Customers</div>
        <div class="stats-description">All registered customers</div>
    </div>
    <div class="stats-card">
        <div class="stats-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="stats-number" id="activeCustomersCount">-</div>
        <div class="stats-label">Active Customers</div>
        <div class="stats-description">Customers with active status</div>
    </div>
    <div class="stats-card">
        <div class="stats-icon">
            <i class="fas fa-plus-circle"></i>
        </div>
        <div class="stats-number" id="newCustomersThisMonth">-</div>
        <div class="stats-label">New This Month</div>
        <div class="stats-description">Recently registered customers</div>
    </div>
    <div class="stats-card">
        <div class="stats-icon">
            <i class="fas fa-shopping-cart"></i>
        </div>
        <div class="stats-number" id="customersWithOrders">-</div>
        <div class="stats-label">With Orders</div>
        <div class="stats-description">Customers with purchase history</div>
    </div>
</div>

<!-- Filter Section -->
<div class="filter-section">
    <div class="filter-header">
        <i class="fas fa-filter"></i>
        <h6 class="filter-title">Filter Customers</h6>
    </div>
    <div class="filter-grid">
        <div>
            <label class="form-label-compact">Search Customers</label>
            <input type="text" class="form-control-compact" id="searchInput" placeholder="Enter customer name, email, or phone">
        </div>
        <div>
            <label class="form-label-compact">Status Filter</label>
            <select class="form-control-compact" id="statusFilter">
                <option value="">All Status</option>
                <option value="true">Active</option>
                <option value="false">Inactive</option>
            </select>
        </div>
        <div>
            <label class="form-label-compact">Customer Type</label>
            <select class="form-control-compact" id="typeFilter">
                <option value="">All Types</option>
                <option value="Individual">Individual</option>
                <option value="Company">Company</option>
            </select>
        </div>
        <div class="d-flex align-items-end gap-2">
            <button type="button" class="btn-compact btn-primary-compact" onclick="customerManager.loadCustomers()">
                <i class="fas fa-search"></i>
                Search
            </button>
            <button type="button" class="btn-compact btn-secondary-compact" onclick="customerManager.clearFilters()">
                <i class="fas fa-times"></i>
                Clear
            </button>
        </div>
    </div>
</div>

<!-- Customers Table -->
<div class="data-table">
    <div class="table-header">
        <i class="fas fa-list"></i>
        <span>Customer Database</span>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Customer Code</th>
                    <th>Customer Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Type</th>
                    <th>Address</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="customersTableBody">
                <tr>
                    <td colspan="8" class="text-center text-muted py-4">
                        <i class="fas fa-spinner fa-spin me-2"></i>
                        Loading customers...
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="pagination-compact">
        <div class="pagination-info">
            Showing <span id="showingFrom">0</span> to <span id="showingTo">0</span> of <span id="totalCustomers">0</span> customers
        </div>
        <div class="d-flex gap-2">
            <select class="form-control-compact" id="pageSizeSelect" style="width: auto;">
                <option value="10">10 per page</option>
                <option value="25">25 per page</option>
                <option value="50">50 per page</option>
            </select>
            <div class="btn-group">
                <button type="button" class="btn-compact btn-secondary-compact" id="prevPageBtn" onclick="customerManager.previousPage()">
                    <i class="fas fa-chevron-left"></i>
                </button>
                <button type="button" class="btn-compact btn-secondary-compact" id="nextPageBtn" onclick="customerManager.nextPage()">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Create/Edit Customer Modal -->
<div class="modal fade" id="customerModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="customerModalTitle">Add New Customer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="customerForm">
                    <input type="hidden" id="customerId" name="Id">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="customerCode" class="form-label">Customer Code *</label>
                                <input type="text" class="form-control" id="customerCode" name="CustomerCode" required>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="customerName" class="form-label">Customer Name *</label>
                                <input type="text" class="form-control" id="customerName" name="Name" required>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="customerEmail" class="form-label">Email *</label>
                                <input type="email" class="form-control" id="customerEmail" name="Email" required>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="customerPhone" class="form-label">Phone *</label>
                                <input type="text" class="form-control" id="customerPhone" name="Phone" required>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="customerType" class="form-label">Customer Type *</label>
                                <select class="form-control" id="customerType" name="Type" required>
                                    <option value="">Select Type</option>
                                    <option value="Individual">Individual</option>
                                    <option value="Company">Company</option>
                                </select>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="customerContactPerson" class="form-label">Contact Person</label>
                                <input type="text" class="form-control" id="customerContactPerson" name="ContactPerson">
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="customerAddress" class="form-label">Address *</label>
                        <textarea class="form-control" id="customerAddress" name="Address" rows="3" required></textarea>
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="customerCity" class="form-label">City</label>
                                <input type="text" class="form-control" id="customerCity" name="City">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="customerPostalCode" class="form-label">Postal Code</label>
                                <input type="text" class="form-control" id="customerPostalCode" name="PostalCode">
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="customerActive" name="IsActive" checked>
                            <label class="form-check-label" for="customerActive">
                                Active
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="customerManager.saveCustomer()">Save Customer</button>
            </div>
        </div>
    </div>
</div>

<!-- View Customer Modal -->
<div class="modal fade" id="viewCustomerModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Customer Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="viewCustomerContent">
                <!-- Content will be populated by JavaScript -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/customer-manager.js"></script>
}