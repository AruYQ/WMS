@model WMS.Models.ViewModels.SupplierViewModel
@{
    ViewData["Title"] = "Edit Supplier";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">Edit Supplier</h2>
                    <p class="text-muted mb-0">Edit informasi supplier</p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Kembali ke Daftar
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Section -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Informasi Supplier</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" id="supplierForm">
                        <input asp-for="Id" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="Masukkan nama supplier" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" placeholder="Masukkan email supplier" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <div id="emailValidation" class="form-text"></div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label"></label>
                                <input asp-for="Phone" class="form-control" placeholder="Masukkan nomor telepon" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="IsActive" class="form-label"></label>
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsActive" class="form-check-label">
                                        Supplier aktif
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label"></label>
                            <textarea asp-for="Address" class="form-control" rows="3" 
                                      placeholder="Masukkan alamat lengkap supplier"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i>Batal
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Update Supplier
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Informasi</h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Catatan:</strong>
                        <ul class="mb-0 mt-2">
                            <li>Email supplier akan digunakan untuk mengirim Purchase Order</li>
                            <li>Pastikan email yang dimasukkan valid dan aktif</li>
                            <li>Nomor telepon bersifat opsional</li>
                            <li>Alamat supplier akan ditampilkan di Purchase Order</li>
                        </ul>
                    </div>

                    <div class="alert alert-warning">
                        <i class="fas fa-history me-2"></i>
                        <strong>Riwayat:</strong>
                        <ul class="mb-0 mt-2">
                            <li>Dibuat: @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</li>
                            <li>Oleh: @Model.CreatedBy</li>
                            @if (Model.ModifiedDate.HasValue)
                            {
                                <li>Diubah: @Model.ModifiedDate.Value.ToString("dd/MM/yyyy HH:mm")</li>
                                <li>Oleh: @Model.ModifiedBy</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Email validation
            $('#Email').on('blur', function() {
                var email = $(this).val();
                if (email) {
                    checkEmailUniqueness(email, @Model.Id);
                }
            });

            function checkEmailUniqueness(email, excludeId) {
                $.ajax({
                    url: '@Url.Action("CheckEmailUniqueness", "Supplier")',
                    type: 'GET',
                    data: { email: email, excludeId: excludeId },
                    success: function(response) {
                        var validationDiv = $('#emailValidation');
                        if (response.isUnique) {
                            validationDiv.html('<i class="fas fa-check text-success"></i> Email tersedia');
                            validationDiv.removeClass('text-danger').addClass('text-success');
                        } else {
                            validationDiv.html('<i class="fas fa-times text-danger"></i> Email sudah digunakan');
                            validationDiv.removeClass('text-success').addClass('text-danger');
                        }
                    },
                    error: function() {
                        $('#emailValidation').html('<i class="fas fa-exclamation-triangle text-warning"></i> Error checking email');
                    }
                });
            }
        });
    </script>
}